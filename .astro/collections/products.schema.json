{
  "$ref": "#/definitions/products",
  "definitions": {
    "products": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "bebek",
            "cocuk"
          ]
        },
        "age_group": {
          "type": "string"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cover_image": {
          "type": "string",
          "default": "/images/placeholder.png"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        },
        "pieces_per_pack": {
          "type": "number"
        },
        "whatsapp_msg": {
          "type": "string"
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        }
      },
      "required": [
        "title",
        "sku",
        "category",
        "age_group",
        "features"
      ],
      "additionalProperties": false
