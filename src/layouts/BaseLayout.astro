---
/**
 * BaseLayout.astro
 * Ana layout bileşeni - Tüm sayfalar bu layout'u kullanır
 * SEO, meta tags, JSON-LD yapısal veri içerir
 */

import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang?: 'tr' | 'en';
  image?: string;
  type?: 'website' | 'article';
  canonicalURL?: string;
  alternateURL?: string;
  alternateLang?: 'tr' | 'en';
  jsonLd?: object;
}

const {
  title,
  description,
  lang = 'tr',
  image = '/images/placeholder.png',
  type = 'website',
  canonicalURL,
  alternateURL,
  alternateLang,
  jsonLd
} = Astro.props;

// Site bilgileri
const siteTitle = 'Yetiş Çorap - Toptan Çocuk ve Bebek Çorabı';
const siteTitleEN = 'Yetiş Çorap - Wholesale Children and Baby Socks';
const siteURL = 'https://yetiscorap.com';

// Tam title (sayfa title + site title)
const fullTitle = title ? `${title} | ${lang === 'tr' ? siteTitle : siteTitleEN}` : (lang === 'tr' ? siteTitle : siteTitleEN);

// Canonical URL oluşturma
const currentPath = Astro.url.pathname;
const canonical = canonicalURL || `${siteURL}${currentPath}`;

// Alternate URL (dil değiştirici için)
const alternate = alternateURL || (lang === 'tr' ? `${siteURL}/en${currentPath}` : `${siteURL}${currentPath.replace('/en', '')}`);
const alternateLangValue = alternateLang || (lang === 'tr' ? 'en' : 'tr');

// OpenGraph görseli
const ogImage = image.startsWith('http') ? image : `${siteURL}${image}`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    
    <!-- Author Meta Tags (Döşemealtı Yazılım) -->
    <link rel="author" href="https://dosemealtiyazilim.net" />
    <meta name="author" content="Döşemealtı Yazılım" />

    <!-- Alternate Language (hreflang) -->
    <link rel="alternate" hreflang={lang} href={canonical} />
    <link rel="alternate" hreflang={alternateLangValue} href={alternate} />
    <link rel="alternate" hreflang="x-default" href={`${siteURL}/`} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={lang === 'tr' ? 'tr_TR' : 'en_US'} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />

    <!-- Mobile Web App -->
    <meta name="theme-color" content="#F472B6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />

    <!-- Preconnect (Performans için) -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- JSON-LD Yapısal Veri -->
    {jsonLd && (
      <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}

    <!-- Critical CSS (Inline edilebilir) -->
    <style>
      /* Critical CSS - İlk render için */
      body {
        opacity: 0;
        animation: fadeIn 0.3s ease-in forwards;
      }
      @keyframes fadeIn {
        to {
          opacity: 1;
        }
      }

      /* ========================================
         WhatsApp Toptan Satış Uyarısı Modal (Global)
         ======================================== */

      /* Modal Backdrop */
      .whatsapp-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 16px;
        animation: fadeIn 0.2s ease-out;
      }

      .whatsapp-modal.hidden {
        display: none;
      }

      /* Modal Content */
      .whatsapp-modal-content {
        background: white;
        border-radius: 16px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        animation: slideUp 0.3s ease-out;
        overflow: hidden;
      }

      @keyframes slideUp {
        from { 
          opacity: 0;
          transform: translateY(20px) scale(0.95);
        }
        to { 
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }

      /* Modal Header */
      .whatsapp-modal-header {
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .whatsapp-modal-header .whatsapp-icon {
        width: 32px;
        height: 32px;
        color: white;
        flex-shrink: 0;
      }

      .whatsapp-modal-title {
        color: white;
        font-size: 18px;
        font-weight: 700;
        margin: 0;
      }

      /* Modal Body */
      .whatsapp-modal-body {
        padding: 24px 20px;
        text-align: center;
      }

      .whatsapp-modal-text {
        color: #374151;
        font-size: 15px;
        line-height: 1.6;
        margin: 0 0 16px 0;
      }

      /* Countdown */
      .whatsapp-countdown {
        background: #FEF3C7;
        border-radius: 8px;
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        font-size: 14px;
        color: #92400E;
      }

      .countdown-timer {
        background: #F59E0B;
        color: white;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 16px;
      }

      /* Modal Footer */
      .whatsapp-modal-footer {
        display: flex;
        gap: 12px;
        padding: 16px 20px 20px;
      }

      /* Buttons */
      .whatsapp-btn {
        flex: 1;
        padding: 12px 20px;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
      }

      .whatsapp-btn-close {
        background: #F3F4F6;
        color: #6B7280;
      }

      .whatsapp-btn-close:hover {
        background: #E5E7EB;
      }

      .whatsapp-btn-continue {
        background: #25D366;
        color: white;
      }

      .whatsapp-btn-continue:hover {
        background: #128C7E;
        transform: scale(1.02);
      }

      .whatsapp-btn-icon {
        width: 18px;
        height: 18px;
      }

      /* Responsive */
      @media (max-width: 480px) {
        .whatsapp-modal-content {
          max-width: 100%;
        }
        
        .whatsapp-modal {
          padding: 12px;
        }
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col pb-20 md:pb-0">
    <!-- Ana içerik slot -->
    <slot />

    <!-- WhatsApp Popup Modal (Global) -->
    <div id="whatsapp-modal" class="whatsapp-modal hidden">
      <div class="whatsapp-modal-content">
        <div class="whatsapp-modal-header">
          <svg class="whatsapp-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <h3 class="whatsapp-modal-title" data-tr="wholesale_warning">⚠️ Sadece Toptan Satış Yapıyoruz</h3>
        </div>
        <div class="whatsapp-modal-body">
          <p class="whatsapp-modal-text" data-tr="wholesale_message">Ürünlerimiz sadece toptan satış için geçerlidir. Lütfen sipariş vermeden önce bu bilgilendirmeyi okuduğunuzu emin olun.</p>
          <div class="whatsapp-countdown">
            <span class="countdown-text" data-tr="auto_continue">Otomatik devam edilir:</span>
            <span class="countdown-timer" id="countdown-timer">5</span>
            <span class="countdown-text" data-tr="seconds">saniye</span>
          </div>
        </div>
        <div class="whatsapp-modal-footer">
          <button id="whatsapp-close" class="whatsapp-btn whatsapp-btn-close">
            <span data-tr="close">Kapat</span>
          </button>
          <button id="whatsapp-continue" class="whatsapp-btn whatsapp-btn-continue">
            <span data-tr="continue">Devam</span>
            <svg class="whatsapp-btn-icon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Global WhatsApp Modal Script -->
    <script is:inline>
      // Çoklu dil desteği
      const translations = {
        tr: {
          wholesale_warning: '⚠️ Sadece Toptan Satış Yapıyoruz',
          wholesale_message: 'Ürünlerimiz sadece toptan satış için geçerlidir. Lütfen sipariş vermeden önce bu bilgilendirmeyi okuduğunuzu emin olun.',
          auto_continue: 'Otomatik devam edilir:',
          seconds: 'saniye',
          close: 'Kapat',
          continue: 'Devam'
        },
        en: {
          wholesale_warning: '⚠️ Wholesale Only',
          wholesale_message: 'Our products are available for wholesale only. Please confirm that you understand this before placing an order.',
          auto_continue: 'Auto continue in:',
          seconds: 'seconds',
          close: 'Close',
          continue: 'Continue'
        }
      };

      // Mevcut dili tespit et
      const getCurrentLang = () => {
        const path = window.location.pathname;
        return path.startsWith('/en') ? 'en' : 'tr';
      };

      // Modal ve sayaç değişkenleri
      let modal = null;
      let countdownTimer = null;
      let countdownValue = 5;
      let currentWhatsAppUrl = '';

      // Modal'ı göster
      const showModal = (url) => {
        currentWhatsAppUrl = url;
        
        // Modal elementini bul
        modal = document.getElementById('whatsapp-modal');
        if (!modal) return;

        // Dile göre çevirileri uygula
        const lang = getCurrentLang();
        const t = translations[lang];

        // Çevirileri uygula
        modal.querySelectorAll('[data-tr]').forEach(el => {
          const key = el.getAttribute('data-tr');
          if (t[key]) {
            el.textContent = t[key];
          }
        });

        // Modal'ı göster
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';

        // Sayacı başlat
        countdownValue = 5;
        const timerElement = document.getElementById('countdown-timer');
        if (timerElement) {
          timerElement.textContent = countdownValue.toString();
        }

        // 5 saniye geri sayım
        countdownTimer = setInterval(() => {
          countdownValue--;
          if (timerElement) {
            timerElement.textContent = countdownValue.toString();
          }

          if (countdownValue <= 0) {
            clearInterval(countdownTimer);
            closeModalAndContinue();
          }
        }, 1000);
      };

      // Modal'ı kapat ve işlemi iptal
      const closeModalOnly = () => {
        if (countdownTimer) {
          clearInterval(countdownTimer);
          countdownTimer = null;
        }

        if (modal) {
          modal.classList.add('hidden');
          document.body.style.overflow = '';
        }

        currentWhatsAppUrl = '';
      };

      // Modal'ı kapat ve WhatsApp'a yönlendir
      const closeModalAndContinue = () => {
        if (countdownTimer) {
          clearInterval(countdownTimer);
          countdownTimer = null;
        }

        if (modal) {
          modal.classList.add('hidden');
          document.body.style.overflow = '';
        }

        if (currentWhatsAppUrl) {
          window.open(currentWhatsAppUrl, '_blank');
          currentWhatsAppUrl = '';
        }
      };

      // Tüm WhatsApp linklerine event listener ekle (Global)
      const initWhatsAppLinks = () => {
        // Tüm wa.me linklerini bul
        const whatsappLinks = document.querySelectorAll('a[href*="wa.me"], a[href*="whatsapp.com"]');
        
        whatsappLinks.forEach(link => {
          // Eğer daha önce işaretlenmemişse
          if (!link.hasAttribute('data-whatsapp-modal-initialized')) {
            link.setAttribute('data-whatsapp-modal-initialized', 'true');
            
            link.addEventListener('click', (e) => {
              e.preventDefault();
              const url = link.getAttribute('href');
              if (url) {
                showModal(url);
              }
            });
          }
        });

        // Kapat butonu
        const closeBtn = document.getElementById('whatsapp-close');
        if (closeBtn && !closeBtn.hasAttribute('data-whatsapp-modal-initialized')) {
          closeBtn.setAttribute('data-whatsapp-modal-initialized', 'true');
          closeBtn.addEventListener('click', closeModalOnly);
        }

        // Devam butonu
        const continueBtn = document.getElementById('whatsapp-continue');
        if (continueBtn && !continueBtn.hasAttribute('data-whatsapp-modal-initialized')) {
          continueBtn.setAttribute('data-whatsapp-modal-initialized', 'true');
          continueBtn.addEventListener('click', closeModalAndContinue);
        }
      };

      // Sayfa yüklendiğinde başlat
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initWhatsAppLinks);
      } else {
        initWhatsAppLinks();
      }

      // Dynamic content için MutationObserver (React bileşenleri için)
      const observer = new MutationObserver(() => {
        initWhatsAppLinks();
      });
      
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
    </script>

    <!-- Analytics (gerekirse eklenebilir) -->
    <!-- Google Analytics, Meta Pixel vb. buraya eklenebilir -->
  </body>
</html>
