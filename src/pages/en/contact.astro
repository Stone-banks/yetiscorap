---
/**
 * EN Contact Page
 * Minimalist design, mobile friendly
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD Structured Data
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'Wholesale baby and children socks',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'Istanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'geo': {
    '@type': 'GeoCoordinates',
    'latitude': '41.0439',
    'longitude': '28.8847'
  },
  'openingHoursSpecification': [
    {
      '@type': 'OpeningHoursSpecification',
      'dayOfWeek': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      'opens': '09:00',
      'closes': '18:00'
    }
  ]
};
---

<BaseLayout
  title="Contact"
  description="Contact Yetiş Çorap. Address: Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50, Esenler/Istanbul. Tel: 0536 920 59 69"
  lang="en"
  jsonLd={jsonLd}
>
  <HeaderNav lang="en" currentPath="/en/contact" client:load />

  <main class="bg-white">
    <!-- Page Title - Compact -->
    <section class="pt-8 pb-6 md:pt-12 md:pb-8 border-b border-gray-100">
      <div class="container">
        <h1 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">Contact</h1>
        <p class="text-sm md:text-base text-slate-500">
          Get in touch with us for wholesale sock orders.
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-6 md:py-10">
      <div class="container">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-12">

          <!-- Left: Contact Info (3 columns) -->
          <div class="lg:col-span-3 space-y-6">

            <!-- Company Info - Compact -->
            <div class="pb-5 border-b border-gray-100">
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Company Information</h2>
              <p class="text-sm font-medium text-slate-800 leading-relaxed mb-1">
                YETİŞ ÇORAP TEKSTİL LTD. ŞTİ.
              </p>
              <p class="text-sm text-slate-600 leading-relaxed">
                Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50<br />
                Esenler / Istanbul, Turkey
              </p>
            </div>

            <!-- Contact Methods - Responsive Grid -->
            <div class="pb-5 border-b border-gray-100">
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-4">Contact Methods</h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <!-- Phone -->
                <a
                  href="tel:+905369205969"
                  class="flex items-center gap-3 p-3 sm:p-3 bg-gray-50 rounded-xl border border-gray-100 hover:border-pink-200 hover:bg-pink-50/50 transition-all group"
                >
                  <div class="w-8 h-8 sm:w-9 sm:h-9 flex-shrink-0 rounded-lg bg-white border border-gray-200 flex items-center justify-center group-hover:border-pink-300 transition-colors">
                    <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-slate-500 group-hover:text-pink-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  </div>
                  <div class="min-w-0">
                    <p class="text-[10px] text-slate-400 uppercase tracking-wide">Phone</p>
                    <p class="text-sm font-semibold text-slate-700">0536 920 59 69</p>
                  </div>
                </a>

                <!-- Email -->
                <a
                  href="mailto:yetiscorap@hotmail.com"
                  class="flex items-center gap-3 p-3 sm:p-3 bg-gray-50 rounded-xl border border-gray-100 hover:border-pink-200 hover:bg-pink-50/50 transition-all group"
                >
                  <div class="w-8 h-8 sm:w-9 sm:h-9 flex-shrink-0 rounded-lg bg-white border border-gray-200 flex items-center justify-center group-hover:border-pink-300 transition-colors">
                    <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-slate-500 group-hover:text-pink-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <p class="text-[10px] text-slate-400 uppercase tracking-wide">Email</p>
                    <p class="text-xs sm:text-sm font-semibold text-slate-700 break-all">yetiscorap@hotmail.com</p>
                  </div>
                </a>
              </div>
            </div>

            <!-- Business Hours - Updated -->
            <div>
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Business Hours</h2>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between items-center py-2 border-b border-gray-50">
                  <span class="text-slate-600">Monday - Friday</span>
                  <span class="font-semibold text-slate-800">09:00 - 18:00</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-50">
                  <span class="text-slate-600">Saturday</span>
                  <span class="font-semibold text-red-500">CLOSED</span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="text-slate-600">Sunday</span>
                  <span class="font-semibold text-red-500">CLOSED</span>
                </div>
              </div>
              <p class="mt-3 text-[11px] text-slate-400">
                * You can send messages via WhatsApp 24/7.
              </p>
            </div>
          </div>

          <!-- Right: Map (2 columns) -->
          <div class="lg:col-span-2">
            <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Location</h2>
            <div class="aspect-[4/3] lg:aspect-[3/4] rounded-2xl overflow-hidden border border-gray-100 shadow-sm">
              <!-- Google Maps Iframe - Giyimkent 4. Sokak -->
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d752.4418977844789!2d28.88420065!3d41.0438986!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabb7d1f4b3d39%3A0x8b7e1a3e5c9d8a7b!2sGiyimkent%204.%20Sk.%2C%20Oru%C3%A7reis%2C%2034235%20Esenler%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1703026200000!5m2!1str!2str"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Yetiş Çorap - Giyimkent 4. Sokak"
              ></iframe>
            </div>
            <!-- Get Directions Button -->
            <a
              href="https://www.google.com/maps/dir/?api=1&destination=41.0439,28.8847"
              target="_blank"
              rel="noopener noreferrer"
              class="mt-4 w-full inline-flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white text-sm font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all duration-200 shadow-md hover:shadow-lg"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <span>Get Directions</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Hello, I would like to get in touch with you."
    variant="fab"
  />
</BaseLayout>
