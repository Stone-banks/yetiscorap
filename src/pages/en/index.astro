// JSON-LD structured data
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'Wholesale baby and children socks manufacturer in Istanbul Giyimkent. 20+ years of experience, quality products.',
  'url': 'https://yetiscorap.com/en',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4. Sokak No:50',
