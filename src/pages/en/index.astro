  <HeaderNav lang="en" currentPath="/en" client:load />

  <main>
    <!-- ==================== HERO SECTION ==================== -->
    <section class="hero-section relative min-h-[100vh] md:min-h-[90vh] flex items-center overflow-hidden">
      <div class="hero-bg absolute inset-0 z-0">
        <img
          src="/dikeyhero.png"
          alt=""
          class="hero-img-mobile md:hidden w-full h-full object-cover object-center"
          loading="eager"
          fetchpriority="high"
          aria-hidden="true"
        />
        <img
          src="/yatayhero.png"
          alt=""
          class="hero-img-desktop hidden md:block w-full h-full object-cover object-center"
          loading="eager"
          fetchpriority="high"
          aria-hidden="true"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-white/95 via-white/85 to-white/40 md:from-white/90 md:via-white/70 md:to-transparent"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-2xl py-12 md:py-16 lg:py-20">
          <div class="mb-6 md:mb-8">
            <img
              src="/yetiscoraplogo.png"
              alt="Yetiş Çorap Logo"
              class="h-32 sm:h-40 md:h-48 lg:h-56 w-auto"
              width="400"
              height="156"
            />
