---
/**
 * EN Product Detail Page
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const products = await getCollection('products', ({ id }) => {
    return id.startsWith('en/');
  });

  return products.map((product) => {
    // Slug'dan dil prefix'ini kaldır (en/kod-14-bebek -> kod-14-bebek)
    const cleanSlug = product.slug.includes('/')
      ? product.slug.split('/').slice(1).join('/')
      : product.slug;
    
    return {
      params: { slug: cleanSlug },
      props: { product }
    };
  });
}) satisfies GetStaticPaths;

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { Content } = await product.render();
const { data } = product;

const categoryLabel = data.category === 'bebek' ? 'Baby' : 'Children';
const defaultWhatsAppMsg = `I would like to get a wholesale price quote for ${data.title} (${data.sku}).`;
const whatsappMsg = data.whatsapp_msg || defaultWhatsAppMsg;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  'name': data.title,
  'description': data.features.join(', '),
  'sku': data.sku,
  'brand': {
    '@type': 'Brand',
    'name': 'Yetiş Çorap'
  },
  'offers': {
    '@type': 'Offer',
    'availability': 'https://schema.org/InStock',
    'priceCurrency': 'TRY',
    'seller': {
      '@type': 'Organization',
      'name': 'Yetiş Çorap'
    }
  }
};
---

<BaseLayout
  title={data.title}
  description={`${data.title} - ${data.features.slice(0, 3).join(', ')}. Contact us via WhatsApp for wholesale.`}
  lang="en"
  type="article"
  jsonLd={jsonLd}
>
  <Header lang="en" currentPath={`/en/product/${product.slug}`} />

  <main>
    <!-- Breadcrumb -->
    <section class="bg-slate-50 py-4">
      <div class="container">
        <nav aria-label="Breadcrumb" class="text-sm">
          <ol class="flex items-center gap-2 text-slate-600">
            <li><a href="/en" class="hover:text-brand-pink transition-colors">Home</a></li>
            <li aria-hidden="true">/</li>
            <li><a href="/en/products" class="hover:text-brand-pink transition-colors">Products</a></li>
            <li aria-hidden="true">/</li>
            <li class="text-slate-900 font-medium">{data.title}</li>
          </ol>
        </nav>
      </div>
    </section>

    <!-- Product Detail -->
    <section class="section">
      <div class="container">
        <div class="grid md:grid-cols-2 gap-12 lg:gap-16">
          <!-- Left: Image -->
          <div class="space-y-4">
            <div class="aspect-square overflow-hidden rounded-xl shadow-lg bg-slate-100">
              <img
                src={data.cover_image}
                alt={data.title}
                width="600"
                height="600"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="flex gap-3 md:hidden">
              <span class="inline-block px-4 py-2 bg-brand-pink text-white text-sm font-semibold rounded-lg">
                {categoryLabel}
              </span>
              <span class="inline-block px-4 py-2 bg-slate-200 text-slate-800 text-sm font-semibold rounded-lg">
                {data.sku}
              </span>
            </div>
          </div>

          <!-- Right: Info -->
          <div class="space-y-6">
            <div class="hidden md:flex gap-3">
              <span class="inline-block px-4 py-2 bg-brand-pink text-white text-sm font-semibold rounded-lg">
                {categoryLabel}
              </span>
              <span class="inline-block px-4 py-2 bg-slate-200 text-slate-800 text-sm font-semibold rounded-lg">
                {data.sku}
              </span>
            </div>

            <div>
              <h1 class="heading-lg mb-3">{data.title}</h1>
              <p class="text-slate-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="font-medium">{data.age_group}</span>
              </p>
            </div>

            <!-- Features -->
            <div class="bg-slate-50 rounded-xl p-6">
              <h2 class="text-lg font-semibold text-slate-900 mb-4">Product Features</h2>
              <ul class="space-y-3">
                {data.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-brand-pink flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-slate-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- WhatsApp Order -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-xl p-6">
              <div class="mb-4">
                <h3 class="text-lg font-semibold text-slate-900 mb-2">Wholesale Order</h3>
                <p class="text-slate-600 text-sm">
                  Contact us via WhatsApp to get a wholesale price quote and place an order for this product.
                </p>
              </div>
              <WhatsAppButton
                message={whatsappMsg}
                size="lg"
                label="Order via WhatsApp"
              />
            </div>

            <!-- Additional Info -->
            <div class="text-sm text-slate-600 space-y-2">
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Contact us for minimum order quantity</span>
              </p>
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Color and size options available</span>
              </p>
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Fast delivery and secure shipping</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Product Description -->
        {Content && (
          <div class="mt-16 max-w-4xl">
            <div class="prose prose-slate max-w-none">
              <Content />
            </div>
          </div>
        )}

        <!-- Back Button -->
        <div class="mt-12 text-center">
          <a
            href="/en/products"
            class="inline-flex items-center gap-2 text-brand-blue hover:text-brand-pink font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span>Back to All Products</span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />

  <WhatsAppButton message={whatsappMsg} variant="fab" />
</BaseLayout>
