---
import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import CatalogSection from '@components/CatalogSection.tsx';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD yapısal veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  'name': 'Product Catalog - Yetiş Çorap',
  'description': 'Wholesale baby and kids socks catalog. Wide product range and affordable prices.',
  'url': 'https://yetiscorap.com/en/products',
  'mainEntity': {
    '@type': 'ItemList',
    'itemListElement': []
  }
};
---

<BaseLayout
  title="Product Catalog - Wholesale Baby & Kids Socks"
  description="Yetiş Çorap product catalog - Wide collection of baby and kids socks. Quality products at wholesale prices."
  lang="en"
  jsonLd={jsonLd}
>
  <HeaderNav lang="en" currentPath="/en/products" client:load />

  <main>
    <!-- Breadcrumb -->
    <section class="py-4 bg-white border-b border-slate-100">
      <div class="container mx-auto px-4">
        <nav class="flex items-center gap-2 text-sm text-slate-500">
          <a href="/en" class="hover:text-slate-700 transition-colors">Home</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-slate-900 font-medium">Products</span>
        </nav>
      </div>
    </section>

    <!-- Products Section - Full Catalog -->
    <CatalogSection client:load mode="full" lang="en" />
  </main>

  <Footer lang="en" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Hello, I would like to get information about your products."
    variant="fab"
  />
</BaseLayout>