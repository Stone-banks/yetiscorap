---
/**
 * TR Ürün Detay Sayfası
 * Tek bir ürünün tüm bilgilerini gösterir
 *
 * Özellikler:
 * - Ürün görseli
 * - SKU, kategori, yaş grubu
 * - Tüm özellikler listeli
 * - Markdown içerik
 * - WhatsApp sipariş butonu (özel mesajlı)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import HeaderNav from '@components/HeaderNav.tsx';
import { getCollection, type CollectionEntry } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  // TR ürünlerini al
  const products = await getCollection('products', ({ id }) => {
    return id.startsWith('tr/');
  });

  return products.map((product) => {
    // Slug'dan dil prefix'ini kaldır (tr/kod-14-bebek -> kod-14-bebek)
    const cleanSlug = product.slug.includes('/')
      ? product.slug.split('/').slice(1).join('/')
      : product.slug;
    
    return {
      params: { slug: cleanSlug },
      props: { product }
    };
  });
}) satisfies GetStaticPaths;

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { Content } = await product.render();
const { data } = product;

// Kategori label
const categoryLabel = data.category === 'bebek' ? 'Bebek' : 'Çocuk';

// WhatsApp mesajı
const defaultWhatsAppMsg = `${data.title} (${data.sku}) için toptan fiyat teklifi almak istiyorum.`;
const whatsappMsg = data.whatsapp_msg || defaultWhatsAppMsg;

// JSON-LD Yapısal Veri (Ürün)
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  'name': data.title,
  'description': data.features.join(', '),
  'sku': data.sku,
  'brand': {
    '@type': 'Brand',
    'name': 'Yetiş Çorap'
  },
  'offers': {
    '@type': 'Offer',
    'availability': 'https://schema.org/InStock',
    'priceCurrency': 'TRY',
    'seller': {
      '@type': 'Organization',
      'name': 'Yetiş Çorap'
    }
  }
};
---

<BaseLayout
  title={data.title}
  description={`${data.title} - ${data.features.slice(0, 3).join(', ')}. Toptan satış için WhatsApp'tan iletişime geçin.`}
  lang="tr"
  type="article"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath={`/urun/${product.slug}`} client:load />

  <main>
    <!-- Breadcrumb -->
    <section class="bg-slate-50 py-4">
      <div class="container">
        <nav aria-label="Breadcrumb" class="text-sm">
          <ol class="flex items-center gap-2 text-slate-600">
            <li>
              <a href="/" class="hover:text-brand-pink transition-colors">Ana Sayfa</a>
            </li>
            <li aria-hidden="true">/</li>
            <li>
              <a href="/urunler" class="hover:text-brand-pink transition-colors">Ürünler</a>
            </li>
            <li aria-hidden="true">/</li>
            <li class="text-slate-900 font-medium">{data.title}</li>
          </ol>
        </nav>
      </div>
    </section>

    <!-- Ürün Detayı -->
    <section class="section">
      <div class="container">
        <div class="grid md:grid-cols-2 gap-12 lg:gap-16">
          <!-- Sol: Ürün Görseli -->
          <div class="space-y-4">
            <div class="aspect-square overflow-hidden rounded-xl shadow-lg bg-slate-100">
              <img
                src={data.cover_image}
                alt={data.title}
                width="600"
                height="600"
                class="w-full h-full object-cover"
              />
            </div>

            <!-- Rozetler (Mobil) -->
            <div class="flex gap-3 md:hidden">
              <span class="inline-block px-4 py-2 bg-brand-pink text-white text-sm font-semibold rounded-lg">
                {categoryLabel}
              </span>
              <span class="inline-block px-4 py-2 bg-slate-200 text-slate-800 text-sm font-semibold rounded-lg">
                {data.sku}
              </span>
            </div>
          </div>

          <!-- Sağ: Ürün Bilgileri -->
          <div class="space-y-6">
            <!-- Rozetler (Desktop) -->
            <div class="hidden md:flex gap-3">
              <span class="inline-block px-4 py-2 bg-brand-pink text-white text-sm font-semibold rounded-lg">
                {categoryLabel}
              </span>
              <span class="inline-block px-4 py-2 bg-slate-200 text-slate-800 text-sm font-semibold rounded-lg">
                {data.sku}
              </span>
            </div>

            <!-- Başlık -->
            <div>
              <h1 class="heading-lg mb-3">{data.title}</h1>
              <p class="text-slate-600 flex items-center gap-2">
                <svg class="w-5 h-5 text-brand-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="font-medium">{data.age_group}</span>
              </p>
            </div>

            <!-- Özellikler -->
            <div class="bg-slate-50 rounded-xl p-6">
              <h2 class="text-lg font-semibold text-slate-900 mb-4">Ürün Özellikleri</h2>
              <ul class="space-y-3">
                {data.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-brand-pink flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-slate-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- WhatsApp Sipariş Butonu -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-xl p-6">
              <div class="mb-4">
                <h3 class="text-lg font-semibold text-slate-900 mb-2">Toptan Sipariş</h3>
                <p class="text-slate-600 text-sm">
                  Bu ürün için toptan fiyat teklifi almak ve sipariş vermek için WhatsApp üzerinden bizimle iletişime geçin.
                </p>
              </div>
              <WhatsAppButton
                message={whatsappMsg}
                size="lg"
                label="WhatsApp ile Sipariş Ver"
              />
            </div>

            <!-- Ek Bilgi -->
            <div class="text-sm text-slate-600 space-y-2">
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Minimum sipariş miktarı için iletişime geçin</span>
              </p>
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Renk ve beden seçenekleri mevcuttur</span>
              </p>
              <p class="flex items-start gap-2">
                <svg class="w-5 h-5 text-brand-blue flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Hızlı teslimat ve güvenli kargo</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Ürün Açıklaması (Markdown İçerik) -->
        {Content && (
          <div class="mt-16 max-w-4xl">
            <div class="prose prose-slate max-w-none">
              <Content />
            </div>
          </div>
        )}

        <!-- Geri Dön Butonu -->
        <div class="mt-12 text-center">
          <a
            href="/urunler"
            class="inline-flex items-center gap-2 text-brand-blue hover:text-brand-pink font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span>Tüm Ürünlere Geri Dön</span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message={whatsappMsg}
    variant="fab"
  />
</BaseLayout>
