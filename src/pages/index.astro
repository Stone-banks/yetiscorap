---
/**
 * TR Anasayfa (index.astro)
 * Yetiş Çorap - Toptan Bebek ve Çocuk Çorabı
 *
 * BÖLÜMLER:
 * 1. Hero - Dikey görsel arka plan, 2x logo
 * 2. Ürün Kataloğu - Modern grid, kompakt kartlar
 * 3. Hakkımızda - Gradient arkaplan
 * 4. İletişim - Icon'lu kartlar ve harita
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import CatalogSection from '@components/CatalogSection.tsx';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD yapısal veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'İstanbul Giyimkent\'te 2017\'den beri toptan bebek ve çocuk çorabı üretimi.',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'foundingDate': '2017',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4. Sokak No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'İstanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'openingHoursSpecification': {
    '@type': 'OpeningHoursSpecification',
    'dayOfWeek': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    'opens': '09:00',
    'closes': '18:00'
  }
};
---

<BaseLayout
  title="Toptan Bebek & Çocuk Çorapları"
  description="Yetiş Çorap - İstanbul Giyimkent'te 2017'den beri kaliteli, cilt dostu bebek ve çocuk çorabı üretiyoruz."
  lang="tr"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath="/" client:load />

  <main>
    <!-- ==================== HERO SECTION ==================== -->
    <section class="hero-section relative min-h-screen md:min-h-[90vh] flex items-center overflow-hidden">
      <!-- Arka Plan Görseli - Mobilde tam görünsün -->
      <div class="absolute inset-0">
        <img
          src="/dikeyhero.png"
          alt="Bebek ve Çocuk Çorapları"
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
        <!-- Overlay gradient -->
        <div class="absolute inset-0 bg-gradient-to-r from-white/95 via-white/80 to-transparent md:from-white/90 md:via-white/60 md:to-transparent"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-xl py-16 md:py-20">
          <!-- Logo - 2x boyut -->
          <div class="mb-8 md:mb-10">
            <img
              src="/yetiscoraplogo.png"
              alt="Yetiş Çorap Logo"
              class="h-32 sm:h-40 md:h-48 lg:h-56 w-auto"
              width="400"
              height="156"
            />
          </div>

          <!-- H1 Başlık -->
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-slate-800 leading-tight mb-6">
            Çocuklar ve Bebekler İçin
            <span class="block text-pink-600 mt-2">Kaliteli Çorap</span>
          </h1>

          <!-- Alt Açıklama -->
          <p class="text-lg md:text-xl text-slate-600 mb-8 leading-relaxed">
            2017'den beri kaliteli, cilt dostu çoraplar üretiyoruz.
            <span class="block mt-2 text-slate-500">İstanbul / Giyimkent</span>
          </p>

          <!-- CTA Butonları -->
          <div class="flex flex-col sm:flex-row gap-4">
            <!-- İncele Butonu (Pembe) -->
            <a
              href="#urunler"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-pink-600 hover:bg-pink-700 text-white text-lg font-semibold rounded-full transition-all duration-300 shadow-lg shadow-pink-500/30 hover:shadow-xl hover:shadow-pink-500/40 hover:-translate-y-0.5"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              <span>Ürünleri İncele</span>
            </a>

            <!-- WhatsApp Butonu -->
            <a
              href="https://wa.me/905369205969?text=Merhaba%2C%20%C3%BCr%C3%BCnleriniz%20hakk%C4%B1nda%20bilgi%20almak%20istiyorum."
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-green-500 hover:bg-green-600 text-white text-lg font-semibold rounded-full transition-all duration-300 shadow-lg shadow-green-500/30 hover:shadow-xl hover:shadow-green-500/40 hover:-translate-y-0.5"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span>İletişim</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
        <a href="#urunler" class="flex flex-col items-center gap-2 text-slate-500 hover:text-pink-500 transition-colors">
          <span class="text-xs font-medium">Aşağı Kaydır</span>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </section>

    <!-- ==================== ÜRÜN KATALOĞU (React + Framer Motion) ==================== -->
    <CatalogSection client:load />

    <!-- ==================== HAKKIMIZDA BÖLÜMÜ ==================== -->
    <section id="hakkimizda" class="py-16 md:py-24 bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800">
      <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-12 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
            Hakkımızda
          </h2>
          <p class="text-lg text-slate-300 max-w-2xl mx-auto">
            Yetiş Çorap olarak kaliteli çorap üretimi konusunda sizlere hizmet veriyoruz
          </p>
        </div>

        <!-- 3 Sütunlu Modern Kartlar -->
        <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
          <!-- Kart 1: Deneyim -->
          <div class="group relative bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/20 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="w-16 h-16 rounded-2xl bg-blue-500/20 flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Deneyim</h3>
              <p class="text-slate-300 leading-relaxed">
                2017'den beri çorap üretimine odaklanıyoruz. 8 yıllık tecrübemizle kaliteli ürünler sunuyoruz.
              </p>
            </div>
          </div>

          <!-- Kart 2: Kalite -->
          <div class="group relative bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/20 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-pink-500/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="w-16 h-16 rounded-2xl bg-pink-500/20 flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Kalite</h3>
              <p class="text-slate-300 leading-relaxed">
                %100 Pamuk, Cilt Dostu ve Bebeklere Uygun malzemeler kullanıyoruz.
              </p>
            </div>
          </div>

          <!-- Kart 3: Toptan Satış -->
          <div class="group relative bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-white/20 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-green-500/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="w-16 h-16 rounded-2xl bg-green-500/20 flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3">Toptan Satış</h3>
              <p class="text-slate-300 leading-relaxed">
                B2B müşterilerimiz için toptan satış seçenekleri sunuyoruz.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== İLETİŞİM ==================== -->
    <section id="iletisim" class="py-16 md:py-24 bg-white">
      <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-12 md:mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-4">
            İletişim
          </h2>
          <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Toptan satış için bizimle iletişime geçin
          </p>
        </div>

        <!-- 4 Kartlı Yapı -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5 mb-12">
          <!-- Adres -->
          <div class="group bg-gradient-to-br from-blue-50 to-blue-100/50 rounded-2xl p-6 border border-blue-100 hover:shadow-lg hover:shadow-blue-100/50 transition-all duration-300">
            <div class="w-14 h-14 rounded-xl bg-blue-500 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-lg">Adres</h3>
            <p class="text-slate-600 leading-relaxed">
              Oruçreis Mah. Giyimkent 4 Sokak No:50<br />Esenler / İstanbul
            </p>
          </div>

          <!-- Telefon -->
          <div class="group bg-gradient-to-br from-green-50 to-green-100/50 rounded-2xl p-6 border border-green-100 hover:shadow-lg hover:shadow-green-100/50 transition-all duration-300">
            <div class="w-14 h-14 rounded-xl bg-green-500 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-lg">Telefon</h3>
            <a href="tel:+905369205969" class="text-xl font-semibold text-slate-700 hover:text-green-600 transition-colors">
              0536 920 59 69
            </a>
            <p class="text-sm text-slate-500 mt-1">09:00 - 18:00</p>
          </div>

          <!-- E-Posta -->
          <div class="group bg-gradient-to-br from-pink-50 to-pink-100/50 rounded-2xl p-6 border border-pink-100 hover:shadow-lg hover:shadow-pink-100/50 transition-all duration-300">
            <div class="w-14 h-14 rounded-xl bg-pink-500 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-lg">E-Posta</h3>
            <a href="mailto:yetiscorap@hotmail.com" class="text-slate-600 hover:text-pink-600 transition-colors break-all">
              yetiscorap@hotmail.com
            </a>
          </div>

          <!-- Çalışma Saatleri -->
          <div class="group bg-gradient-to-br from-amber-50 to-amber-100/50 rounded-2xl p-6 border border-amber-100 hover:shadow-lg hover:shadow-amber-100/50 transition-all duration-300">
            <div class="w-14 h-14 rounded-xl bg-amber-500 flex items-center justify-center mb-5 group-hover:scale-110 transition-transform">
              <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-bold text-slate-800 mb-2 text-lg">Çalışma Saatleri</h3>
            <p class="text-slate-600">Pazartesi - Cuma</p>
            <p class="text-lg font-semibold text-slate-700">09:00 - 18:00</p>
          </div>
        </div>

        <!-- Google Maps -->
        <div class="bg-gray-100 rounded-2xl overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.7834373252627!2d28.88469!3d41.043889!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabb0e77e9e4f7%3A0x4b8e9f5b9b5f5f5f!2sGiyimkent%2C%20Oru%C3%A7reis%2C%2034235%20Esenler%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1703026200000!5m2!1str!2str"
            width="100%"
            height="350"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Yetiş Çorap - Giyimkent, İstanbul"
            class="w-full"
          ></iframe>
        </div>

        <!-- Yol Tarifi CTA -->
        <div class="text-center mt-10">
          <a
            href="https://www.google.com/maps/dir/?api=1&destination=41.043889,28.88469&destination_place_id=ChIJ9-TpdzS5yhQRX19fu1uf6Es"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-blue-500 hover:bg-blue-600 text-white text-lg font-semibold rounded-full transition-all duration-300 shadow-lg shadow-blue-500/30 hover:shadow-xl"
          >
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
            </svg>
            <span>Yol Tarifi Al</span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Merhaba, toptan çorap siparişi hakkında bilgi almak istiyorum."
    variant="fab"
  />
</BaseLayout>

<style>
  /* Line clamp for text */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Scrollbar hide for horizontal scroll */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
