---
/**
 * TR Anasayfa (index.astro)
 * Yetiş Çorap - Toptan Bebek ve Çocuk Çorabı
 *
 * BÖLÜMLER:
 * 1. Hero - Dikey görsel arka plan, 2x logo
 * 2. Ürün Kataloğu - Modern grid, kompakt kartlar
 * 3. Hakkımızda - Gradient arkaplan
 * 4. İletişim - Icon'lu kartlar ve harita
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import CatalogSection from '@components/CatalogSection.tsx';
import HeaderNav from '@components/HeaderNav.tsx';
import GoogleReviews from '@components/GoogleReviews.tsx';

// JSON-LD yapısal veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'İstanbul Giyimkent\'te 2017\'den beri toptan bebek ve çocuk çorabı üretimi.',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'foundingDate': '2017',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4. Sokak No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'İstanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'openingHoursSpecification': {
    '@type': 'OpeningHoursSpecification',
    'dayOfWeek': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    'opens': '09:00',
    'closes': '18:00'
  }
};
---

<BaseLayout
  title="Toptan Bebek & Çocuk Çorapları"
  description="Yetiş Çorap - İstanbul Giyimkent'te 2017'den beri kaliteli, cilt dostu bebek ve çocuk çorabı üretiyoruz."
  lang="tr"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath="/" client:load />

  <main>
    <!-- ==================== HERO SECTION ==================== -->
    <section class="hero-section relative min-h-screen md:min-h-[90vh] flex items-center overflow-hidden">
      <!-- Arka Plan Görseli - Mobilde tam görünsün -->
      <div class="absolute inset-0">
        <img
          src="/dikeyhero.jpg"
          alt="Bebek ve Çocuk Çorapları"
          class="w-full h-full object-cover object-center"
          loading="eager"
        />
        <!-- Koyu Gradyan Overlay - Okunabilirlik için -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/30 to-black/60"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-xl mx-auto text-center py-6 md:py-8 -mt-12 md:-mt-16">
          <!-- Logo -->
          <div class="mb-2 md:mb-3 inline-block">
            <img
              src="/yetiscoraplogo.png"
              alt="Yetiş Çorap Logo"
              class="h-auto w-[200px] sm:w-[220px] md:w-[240px] brightness-0 invert drop-shadow-2xl"
              style="filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.3)) drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));"
              width="240"
              height="96"
            />
          </div>

          <!-- H1 Başlık - Toptan Satış Odaklı -->
          <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white leading-tight mb-1.5 md:mb-2 drop-shadow-lg">
            Türkiye'nin Güvenilir
            <span class="block text-pink-400 mt-0.5">Toptan Çorap Tedarikçisi</span>
          </h1>

          <!-- Alt Açıklama - Wholesaler Copy -->
          <p class="text-sm sm:text-base md:text-lg text-white/90 mb-2.5 md:mb-3 leading-relaxed drop-shadow-md max-w-md mx-auto">
            Geniş koleksiyon, sınırsız stok ve hızlı sevkiyat avantajıyla işinizi büyütüyoruz.
          </p>

          <!-- Trust Bar - Güven Göstergeleri -->
          <div class="mb-3 md:mb-4">
            <p class="text-[10px] sm:text-xs text-white/80 font-light tracking-wider drop-shadow-md">
              HIZLI SEVKİYAT • DEVASA STOK • ÜSTÜN KALİTE
            </p>
          </div>

          <!-- CTA Butonları - %20 Küçültülmüş -->
          <div class="flex flex-col sm:flex-row justify-center gap-3">
            <!-- Kataloğu İncele Butonu (Pembe) -->
            <a
              href="#urunler"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-pink-600 hover:bg-pink-700 text-white text-sm sm:text-base font-semibold rounded-full transition-all duration-300 shadow-lg shadow-pink-500/40 hover:shadow-xl hover:shadow-pink-500/50 hover:-translate-y-0.5"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              <span>Kataloğu İncele</span>
            </a>

            <!-- Toptan Fiyat Teklifi Al Butonu (Yeşil Outline) -->
            <a
              href="https://wa.me/905369205969?text=Merhaba%2C%20toptan%20fiyat%20teklifi%20almak%20istiyorum."
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent border-2 border-green-500 text-white text-sm sm:text-base font-semibold rounded-full transition-all duration-300 hover:bg-green-500/20 hover:-translate-y-0.5"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span>Toptan Fiyat Teklifi Al</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Aşağı Kaydır Animasyonu -->
      <div class="absolute bottom-32 md:bottom-12 left-1/2 -translate-x-1/2 z-10 flex flex-col items-center">
        <div class="w-[1px] h-8 bg-gradient-to-b from-transparent via-white/60 to-white/90"></div>
        <div class="scroll-indicator mt-1">
          <svg class="w-4 h-4 text-white/90" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </div>
      </div>

    </section>

    <!-- ==================== ÜRÜN KATALOĞU (React + Framer Motion) ==================== -->
    <CatalogSection client:load mode="home" />

    <!-- ==================== GOOGLE REVIEWS ==================== -->
    <GoogleReviews client:load />

    <!-- ==================== HAKKIMIZDA BÖLÜMÜ - MODERN & ÇOCUK DOSTU ==================== -->
    <section id="hakkimizda" class="py-12 bg-gradient-to-b from-pink-50/50 via-white to-blue-50/30 relative overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute top-10 left-10 w-20 h-20 bg-pink-200/20 rounded-full blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-32 h-32 bg-blue-200/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-yellow-200/20 rounded-full blur-2xl"></div>

      <!-- Floating Shapes -->
      <div class="absolute top-20 right-[15%] w-3 h-3 bg-pink-300 rounded-full opacity-40 animate-bounce" style="animation-delay: 0s; animation-duration: 3s;"></div>
      <div class="absolute top-40 left-[10%] w-2 h-2 bg-blue-300 rounded-full opacity-40 animate-bounce" style="animation-delay: 0.5s; animation-duration: 4s;"></div>
      <div class="absolute bottom-32 right-[20%] w-2.5 h-2.5 bg-yellow-300 rounded-full opacity-40 animate-bounce" style="animation-delay: 1s; animation-duration: 3.5s;"></div>

      <div class="container relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-12 md:mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full shadow-sm border border-pink-100 mb-6">
            <span class="w-2 h-2 bg-pink-400 rounded-full animate-pulse"></span>
            <span class="text-xs font-medium text-slate-600">2017'den beri güvenle</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-800 mb-4">
            Minik Ayaklar İçin
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-pink-400"> Büyük Özen</span>
          </h2>
          <p class="text-base md:text-lg text-slate-500 max-w-2xl mx-auto">
            Her çorapta sevgi var, her adımda kalite
          </p>
        </div>

        <!-- Feature Cards - Modern Grid -->
        <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-5xl mx-auto">

          <!-- Card 1: Deneyim -->
          <div class="group bg-white rounded-3xl p-6 md:p-8 shadow-sm hover:shadow-xl border border-slate-100 hover:border-pink-200 transition-all duration-300 hover:-translate-y-1">
            <div class="w-14 h-14 mb-5 rounded-2xl bg-gradient-to-br from-pink-100 to-pink-50 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-pink-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-slate-800 mb-3">8 Yıllık Deneyim</h3>
            <p class="text-sm text-slate-500 leading-relaxed">
              2017'den beri bebek ve çocuk çorapları sektöründe, en trend ve kaliteli modelleri sizin için özenle seçiyoruz.
            </p>
          </div>

          <!-- Card 2: Kalite -->
          <div class="group bg-white rounded-3xl p-6 md:p-8 shadow-sm hover:shadow-xl border border-slate-100 hover:border-blue-200 transition-all duration-300 hover:-translate-y-1">
            <div class="w-14 h-14 mb-5 rounded-2xl bg-gradient-to-br from-blue-100 to-blue-50 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-slate-800 mb-3">Cilt Dostu Kalite</h3>
            <p class="text-sm text-slate-500 leading-relaxed">
              %100 pamuklu, antialerjik ve bebek cildine uygun ürünlerle minik ayakları koruyoruz.
            </p>
          </div>

          <!-- Card 3: Tedarik -->
          <div class="group bg-white rounded-3xl p-6 md:p-8 shadow-sm hover:shadow-xl border border-slate-100 hover:border-green-200 transition-all duration-300 hover:-translate-y-1">
            <div class="w-14 h-14 mb-5 rounded-2xl bg-gradient-to-br from-green-100 to-green-50 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <svg class="w-7 h-7 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-slate-800 mb-3">Hızlı Tedarik</h3>
            <p class="text-sm text-slate-500 leading-relaxed">
              Zengin stok ve hızlı kargo ağımızla, işletmenizin ihtiyaçlarına anında cevap veriyoruz.
            </p>
          </div>

        </div>

        <!-- Trust Badges -->
        <div class="mt-14 flex flex-wrap items-center justify-center gap-4 md:gap-6">
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-slate-100 shadow-sm">
            <svg class="w-4 h-4 text-pink-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-xs font-medium text-slate-600">%100 Pamuk</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-slate-100 shadow-sm">
            <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-xs font-medium text-slate-600">Antialerjik</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full border border-slate-100 shadow-sm">
            <svg class="w-4 h-4 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-xs font-medium text-slate-600">Toptan Fiyat</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== GOOGLE REVIEWS ==================== -->
    <GoogleReviews client:load />

    <!-- ==================== İLETİŞİM - KOMPAKT & MODERN ==================== -->
    <section id="iletisim" class="py-12 md:py-16 bg-gradient-to-b from-blue-50/30 via-white to-pink-50/30 relative overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute top-0 right-0 w-32 h-32 bg-pink-100/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-24 h-24 bg-blue-100/30 rounded-full blur-2xl"></div>

      <div class="container relative z-10">
        <!-- Section Header - Kompakt -->
        <div class="text-center mb-8 md:mb-10">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">
            Bize <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 to-pink-400">Ulaşın</span>
          </h2>
          <p class="text-sm text-slate-500">Toptan siparişleriniz için iletişime geçin</p>
        </div>

        <!-- İletişim Grid - Kompakt -->
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-4 mb-8">

            <!-- Telefon -->
            <a href="tel:+905369205969" class="group bg-white rounded-2xl p-4 border border-slate-100 hover:border-green-200 hover:shadow-lg transition-all duration-300 text-center">
              <div class="w-10 h-10 mx-auto mb-3 rounded-xl bg-gradient-to-br from-green-100 to-green-50 flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <p class="text-xs text-slate-400 mb-1">Telefon</p>
              <p class="text-sm font-semibold text-slate-700">0536 920 59 69</p>
            </a>

            <!-- E-Posta -->
            <a href="mailto:yetiscorap@hotmail.com" class="group bg-white rounded-2xl p-4 border border-slate-100 hover:border-pink-200 hover:shadow-lg transition-all duration-300 text-center">
              <div class="w-10 h-10 mx-auto mb-3 rounded-xl bg-gradient-to-br from-pink-100 to-pink-50 flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-pink-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <p class="text-xs text-slate-400 mb-1">E-Posta</p>
              <p class="text-xs font-semibold text-slate-700 truncate">yetiscorap@hotmail.com</p>
            </a>

            <!-- Konum -->
            <a href="https://www.google.com/maps/search/Oruçreis+Mah.+Giyimkent+4+Sokak+Esenler+İstanbul" target="_blank" rel="noopener noreferrer" class="group bg-white rounded-2xl p-4 border border-slate-100 hover:border-blue-200 hover:shadow-lg transition-all duration-300 text-center">
              <div class="w-10 h-10 mx-auto mb-3 rounded-xl bg-gradient-to-br from-blue-100 to-blue-50 flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <p class="text-xs text-slate-400 mb-1">Konum</p>
              <p class="text-xs font-semibold text-slate-700">Giyimkent, İstanbul</p>
            </a>

            <!-- Çalışma Saatleri -->
            <div class="bg-white rounded-2xl p-4 border border-slate-100 text-center">
              <div class="w-10 h-10 mx-auto mb-3 rounded-xl bg-gradient-to-br from-amber-100 to-amber-50 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <p class="text-xs text-slate-400 mb-1">Çalışma Saatleri</p>
              <p class="text-xs font-semibold text-slate-700">Pzt-Cum 09-18</p>
            </div>

          </div>

          <!-- Adres Satırı -->
          <div class="text-center bg-white/60 backdrop-blur-sm rounded-2xl py-4 px-6 border border-slate-100">
            <p class="text-sm text-slate-600">
              <span class="font-medium text-slate-700">Adres:</span> Oruçreis Mah. Giyimkent 4 Sokak No:50, Esenler / İstanbul
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Merhaba, toptan çorap siparişi hakkında bilgi almak istiyorum."
    variant="fab"
  />
</BaseLayout>

<style>
  /* Line clamp for text */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Scrollbar hide for horizontal scroll */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
