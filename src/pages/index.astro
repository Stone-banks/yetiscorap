---
/**
 * TR Anasayfa (index.astro)
 * Yetiş Çorap ana sayfa
 *
 * GÜNCELLEME:
 * - Hero bölümü: dikey görsel mobilde tam görünecek şekilde, logo 2x büyütüldü
 * - Öne çıkan ürünler kaldırıldı, modern grid katalog eklendi
 * - Hakkımızda ve iletişim: gradient arkaplan, card tasarımı, harita eklendi
 * - Instagram bölümü kaldırıldı, sadece footer'da link var
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import { getCollection } from 'astro:content';

// TR ürünleri al (tüm ürünler)
const allProducts = await getCollection('products', ({ id }) => {
  return id.startsWith('tr/');
});

// JSON-LD yapısal veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'İstanbul Giyimkent\'te toptan bebek ve çocuk çorabı satışı',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4. Sokak No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'İstanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'openingHoursSpecification': {
    '@type': 'OpeningHoursSpecification',
    'dayOfWeek': [
      'Monday',
      'Tuesday',
      'Wednesday',
      'Thursday',
      'Friday',
      'Saturday'
    ],
    'opens': '09:00',
    'closes': '18:00'
  }
};

// WhatsApp numarası
const phoneNumber = '905369205969';
---

<BaseLayout
  title="Ana Sayfa"
  description="Yetiş Çorap - İstanbul Giyimkent'te 20 yılı aşkın deneyimle bebek ve çocuk çorabı toptan satışı. Kaliteli, uygun fiyatlı ve güvenilir çorap tedarikçiniz."
  lang="tr"
  jsonLd={jsonLd}
>
  <Header lang="tr" />

  <main>
    <!-- ==================== HERO SECTION ==================== -->
    <section class="hero-section relative overflow-hidden">
      <!-- Hero Görseli Container -->
      <div class="hero-container relative w-full">
        <!-- Mobil: Dikey Hero -->
        <div class="hero-mobile block md:hidden w-full">
          <img
            src="/dikeyhero.png"
            alt="Yetiş Çorap - Toptan Bebek ve Çocuk Çorabı"
            class="w-full h-full object-cover object-center"
            loading="eager"
            fetchpriority="high"
          />
        </div>
        
        <!-- Desktop: Yatay Hero -->
        <div class="hero-desktop hidden md:block w-full">
          <img
            src="/yatayhero.png"
            alt="Yetiş Çorap - Toptan Bebek ve Çocuk Çorabı"
            class="w-full h-auto object-cover"
            width="1920"
            height="800"
            loading="eager"
            fetchpriority="high"
          />
        </div>

        <!-- Hero İçerik Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-white/95 via-white/80 to-transparent md:from-white/90 md:via-white/60 md:to-transparent">
          <div class="container h-full flex items-center">
            <div class="w-full max-w-xl text-center md:text-left px-4 py-8 md:py-12 lg:py-16">

              <!-- Logo - 2x büyütülmüş -->
              <div class="mb-6 md:mb-8">
                <img 
                  src="/yetiscoraplogo.png" 
                  alt="Yetiş Çorap Logo" 
                  class="h-24 sm:h-28 md:h-32 lg:h-40 w-auto mx-auto md:mx-0"
                />
              </div>

              <!-- Ana Başlık -->
              <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 leading-tight mb-4 md:mb-6">
                Kaliteli Bebek ve Çocuk Çorapları
                <span class="block text-pink-500 mt-1 md:mt-2">Toptan Satış</span>
              </h1>

              <!-- Alt Başlık -->
              <p class="text-base sm:text-lg md:text-xl text-slate-600 mb-6 md:mb-8 leading-relaxed max-w-xl mx-auto md:mx-0">
                İstanbul Giyimkent'te <strong class="text-slate-800">20+ yıllık deneyim</strong> ile
                güvenilir çorap tedarikçiniz.
              </p>

              <!-- CTA Butonlar -->
              <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center md:justify-start items-center md:items-start mb-8 md:mb-10">
                <WhatsAppButton
                  message="Merhaba, toptan çorap fiyatları hakkında bilgi almak istiyorum."
                  size="lg"
                  label="WhatsApp ile İletişim"
                />
                <a
                  href="#urun-katalog"
                  class="inline-flex items-center justify-center gap-2 w-full sm:w-auto px-6 py-3.5 text-base font-semibold text-pink-500 bg-white border-2 border-pink-500 rounded-xl hover:bg-pink-50 active:bg-pink-100 transition-colors min-h-[48px]"
                >
                  <span>Ürünleri İncele</span>
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>

              <!-- İstatistikler -->
              <div class="grid grid-cols-3 gap-2 sm:gap-4 max-w-md mx-auto md:mx-0">
                <div class="text-center p-3 sm:p-4 bg-white rounded-xl shadow-sm border border-slate-100">
                  <div class="text-xl sm:text-2xl md:text-3xl font-bold text-pink-500">20+</div>
                  <div class="text-xs sm:text-sm text-slate-500 mt-0.5">Yıl Deneyim</div>
                </div>
                <div class="text-center p-3 sm:p-4 bg-white rounded-xl shadow-sm border border-slate-100">
                  <div class="text-xl sm:text-2xl md:text-3xl font-bold text-blue-500">100+</div>
                  <div class="text-xs sm:text-sm text-slate-500 mt-0.5">Ürün Çeşidi</div>
                </div>
                <div class="text-center p-3 sm:p-4 bg-white rounded-xl shadow-sm border border-slate-100">
                  <div class="text-xl sm:text-2xl md:text-3xl font-bold text-amber-500">7/24</div>
                  <div class="text-xs sm:text-sm text-slate-500 mt-0.5">Destek</div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== ÜRÜN KATALOĞU ==================== -->
    <section id="urun-katalog" class="py-12 md:py-16 lg:py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-8 md:mb-12">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-900 mb-3 md:mb-4">
            Ürün Kataloğu
          </h2>
          <p class="text-slate-600 text-base md:text-lg max-w-2xl mx-auto">
            Bebek ve çocuk çoraplarımızı inceleyin, beğendiğiniz ürün için WhatsApp'tan bize ulaşın.
          </p>
        </div>

        <!-- Modern Grid Katalog -->
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6">
          {allProducts.map((product) => {
            const { data, slug } = product;
            const cleanSlug = slug.includes('/') ? slug.split('/').slice(1).join('/') : slug;
            const productURL = `/urun/${cleanSlug}`;
            const whatsappMsg = data.whatsapp_msg || `Merhaba, ${data.title} (${data.sku}) için toptan fiyat teklifi almak istiyorum.`;
            const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMsg)}`;
            
            return (
              <div class="product-card bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-shadow">
                <!-- WhatsApp Soru Sor Butonu - Üstte -->
                <a
                  href={whatsappURL}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center justify-center gap-2 w-full py-2 bg-green-500 text-white text-xs sm:text-sm font-medium hover:bg-green-600 transition-colors"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                  </svg>
                  <span>Soru Sor</span>
                </a>
                
                <!-- Ürün Görseli -->
                <a href={productURL} class="block aspect-square overflow-hidden bg-slate-50">
                  {data.cover_image ? (
                    <img
                      src={data.cover_image}
                      alt={data.title}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-slate-100 text-slate-400">
                      <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  )}
                </a>
                
                <!-- Ürün Bilgileri -->
                <div class="p-3">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="text-xs font-semibold text-pink-500 bg-pink-50 px-2 py-0.5 rounded-full">{data.sku}</span>
                  </div>
                  <a href={productURL} class="block">
                    <h3 class="text-sm font-medium text-slate-800 line-clamp-1 hover:text-pink-500 transition-colors">{data.title}</h3>
                  </a>
                  <p class="text-xs text-slate-500 mt-1">{data.age_group}</p>
                </div>
              </div>
            );
          })}
        </div>

        <!-- Tüm Ürünler Butonu -->
        <div class="text-center mt-8">
          <a
            href="/urunler"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold text-white bg-blue-500 rounded-xl hover:bg-blue-600 active:bg-blue-700 transition-colors shadow-md min-h-[48px]"
          >
            <span>Tüm Ürünleri Gör</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ==================== HAKKIMIZDA ==================== -->
    <section class="py-12 md:py-16 lg:py-20 bg-gradient-to-br from-slate-50 via-pink-50/30 to-blue-50/30">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          
          <!-- Başlık -->
          <div class="text-center mb-10 md:mb-14">
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
              Yetiş Çorap Hakkında
            </h2>
            <p class="text-slate-600 text-base md:text-lg max-w-2xl mx-auto">
              20 yılı aşkın deneyimimizle kaliteli çorap üretimi ve toptan satışında güvenilir adresiniz
            </p>
          </div>

          <!-- Hakkımızda Kartı -->
          <div class="bg-white rounded-2xl shadow-lg p-6 md:p-10 mb-10 border border-slate-100">
            <div class="grid md:grid-cols-2 gap-8 items-center">
              <div>
                <h3 class="text-xl md:text-2xl font-bold text-slate-900 mb-4">Neden Yetiş Çorap?</h3>
                <div class="space-y-4 text-slate-600">
                  <p class="text-base leading-relaxed">
                    <strong class="text-slate-800">Yetiş Çorap</strong>, 2000 yılından bu yana İstanbul Giyimkent'te
                    bebek ve çocuk çorabı üretimi ve toptan satışı konusunda hizmet vermektedir.
                  </p>
                  <p class="text-base leading-relaxed">
                    Kaliteli üretim, uygun fiyatlar ve müşteri memnuniyeti odaklı çalışma prensiplerimizle
                    sektörde güvenilir bir tedarikçi konumundayız.
                  </p>
                </div>
              </div>
              
              <!-- Özellikler -->
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-gradient-to-br from-pink-50 to-pink-100/50 p-4 rounded-xl">
                  <div class="w-10 h-10 bg-pink-500 rounded-lg flex items-center justify-center mb-3">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <h4 class="font-semibold text-slate-800 text-sm mb-1">%100 Pamuklu</h4>
                  <p class="text-xs text-slate-600">Kaliteli kumaşlar</p>
                </div>
                
                <div class="bg-gradient-to-br from-blue-50 to-blue-100/50 p-4 rounded-xl">
                  <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mb-3">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <h4 class="font-semibold text-slate-800 text-sm mb-1">Bebek Güvenli</h4>
                  <p class="text-xs text-slate-600">Sağlığa uygun üretim</p>
                </div>
                
                <div class="bg-gradient-to-br from-amber-50 to-amber-100/50 p-4 rounded-xl">
                  <div class="w-10 h-10 bg-amber-500 rounded-lg flex items-center justify-center mb-3">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <h4 class="font-semibold text-slate-800 text-sm mb-1">Hızlı Teslimat</h4>
                  <p class="text-xs text-slate-600">Esnek sipariş</p>
                </div>
                
                <div class="bg-gradient-to-br from-green-50 to-green-100/50 p-4 rounded-xl">
                  <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mb-3">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <h4 class="font-semibold text-slate-800 text-sm mb-1">Uygun Fiyat</h4>
                  <p class="text-xs text-slate-600">Rekabetçi fiyatlar</p>
                </div>
              </div>
            </div>
          </div>

          <!-- İletişim Kartları -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
            <!-- Adres Kartı -->
            <div class="bg-white rounded-xl shadow-md p-5 border border-slate-100 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h4 class="font-semibold text-slate-900 mb-2">Adres</h4>
              <p class="text-sm text-slate-600 leading-relaxed">
                Oruçreis Mah. Giyimkent 4 Sokak No:50, Esenler / İstanbul
              </p>
            </div>

            <!-- Telefon Kartı -->
            <div class="bg-white rounded-xl shadow-md p-5 border border-slate-100 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h4 class="font-semibold text-slate-900 mb-2">Telefon</h4>
              <a href="tel:+905369205969" class="text-sm text-slate-600 hover:text-pink-500 transition-colors">
                0536 920 59 69
              </a>
            </div>

            <!-- E-posta Kartı -->
            <div class="bg-white rounded-xl shadow-md p-5 border border-slate-100 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-pink-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h4 class="font-semibold text-slate-900 mb-2">E-Posta</h4>
              <a href="mailto:yetiscorap@hotmail.com" class="text-sm text-slate-600 hover:text-pink-500 transition-colors break-all">
                yetiscorap@hotmail.com
              </a>
            </div>

            <!-- Çalışma Saatleri Kartı -->
            <div class="bg-white rounded-xl shadow-md p-5 border border-slate-100 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h4 class="font-semibold text-slate-900 mb-2">Çalışma Saatleri</h4>
              <p class="text-sm text-slate-600">
                Pzt - Cmt: 09:00 - 18:00
              </p>
            </div>
          </div>

          <!-- Harita -->
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-slate-100">
            <div class="p-4 bg-slate-50 border-b border-slate-100">
              <h3 class="font-semibold text-slate-900 flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Bizi Ziyaret Edin
              </h3>
            </div>
            <div class="aspect-video md:aspect-[21/9]">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.7834373252627!2d28.88469!3d41.043889!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabb0e77e9e4f7%3A0x4b8e9f5b9b5f5f5f!2sGiyimkent%2C%20Oru%C3%A7reis%2C%2034235%20Esenler%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1703026200000!5m2!1str!2str"
                width="100%" 
                height="100%" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                title="Yetiş Çorap Konum"
