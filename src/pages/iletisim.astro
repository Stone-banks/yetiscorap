---
/**
 * TR İletişim Sayfası
 * Minimalist tasarım, mobil uyumlu
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD Yapısal Veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'Toptan bebek ve çocuk çorabı satışı',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'İstanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'geo': {
    '@type': 'GeoCoordinates',
    'latitude': '41.0439',
    'longitude': '28.8847'
  },
  'openingHoursSpecification': [
    {
      '@type': 'OpeningHoursSpecification',
      'dayOfWeek': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      'opens': '09:00',
      'closes': '18:00'
    }
  ]
};
---

<BaseLayout
  title="İletişim"
  description="Yetiş Çorap ile iletişime geçin. Adres: Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50, Esenler/İstanbul. Tel: 0536 920 59 69"
  lang="tr"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath="/iletisim" client:load />

  <main class="bg-white">
    <!-- Sayfa Başlığı - Kompakt -->
    <section class="pt-8 pb-6 md:pt-12 md:pb-8 border-b border-gray-100">
      <div class="container">
        <h1 class="text-2xl md:text-3xl font-bold text-slate-800 mb-2">İletişim</h1>
        <p class="text-sm md:text-base text-slate-500">
          Toptan çorap siparişleriniz için bizimle iletişime geçin.
        </p>
      </div>
    </section>

    <!-- Ana İçerik -->
    <section class="py-6 md:py-10">
      <div class="container">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-12">

          <!-- Sol: İletişim Bilgileri (3 kolon) -->
          <div class="lg:col-span-3 space-y-6">

            <!-- Firma Bilgileri - Kompakt -->
            <div class="pb-5 border-b border-gray-100">
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Firma Bilgileri</h2>
              <p class="text-sm font-medium text-slate-800 leading-relaxed mb-1">
                YETİŞ ÇORAP TEKSTİL LTD. ŞTİ.
              </p>
              <p class="text-sm text-slate-600 leading-relaxed">
                Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50<br />
                Esenler / İstanbul
              </p>
            </div>

            <!-- İletişim Yöntemleri - 2'li Grid -->
            <div class="pb-5 border-b border-gray-100">
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-4">İletişim Yöntemleri</h2>
              <div class="grid grid-cols-2 gap-3">
                <!-- Telefon -->
                <a
                  href="tel:+905369205969"
                  class="flex items-center gap-3 p-3 bg-gray-50 rounded-xl border border-gray-100 hover:border-pink-200 hover:bg-pink-50/50 transition-all group"
                >
                  <div class="w-9 h-9 rounded-lg bg-white border border-gray-200 flex items-center justify-center group-hover:border-pink-300 transition-colors">
                    <svg class="w-4 h-4 text-slate-500 group-hover:text-pink-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-[10px] text-slate-400 uppercase tracking-wide">Telefon</p>
                    <p class="text-sm font-semibold text-slate-700">0536 920 59 69</p>
                  </div>
                </a>

                <!-- E-Posta -->
                <a
                  href="mailto:yetiscorap@hotmail.com"
                  class="flex items-center gap-3 p-3 bg-gray-50 rounded-xl border border-gray-100 hover:border-pink-200 hover:bg-pink-50/50 transition-all group"
                >
                  <div class="w-9 h-9 rounded-lg bg-white border border-gray-200 flex items-center justify-center group-hover:border-pink-300 transition-colors">
                    <svg class="w-4 h-4 text-slate-500 group-hover:text-pink-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-[10px] text-slate-400 uppercase tracking-wide">E-Posta</p>
                    <p class="text-xs font-semibold text-slate-700">yetiscorap@hotmail.com</p>
                  </div>
                </a>
              </div>
            </div>

            <!-- Çalışma Saatleri - Güncellenmiş -->
            <div>
              <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Çalışma Saatleri</h2>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between items-center py-2 border-b border-gray-50">
                  <span class="text-slate-600">Pazartesi - Cuma</span>
                  <span class="font-semibold text-slate-800">09:00 - 18:00</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-50">
                  <span class="text-slate-600">Cumartesi</span>
                  <span class="font-semibold text-red-500">KAPALI</span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="text-slate-600">Pazar</span>
                  <span class="font-semibold text-red-500">KAPALI</span>
                </div>
              </div>
              <p class="mt-3 text-[11px] text-slate-400">
                * WhatsApp üzerinden 7/24 mesaj gönderebilirsiniz.
              </p>
            </div>
          </div>

          <!-- Sağ: Harita (2 kolon) -->
          <div class="lg:col-span-2">
            <h2 class="text-xs font-semibold text-slate-400 uppercase tracking-wider mb-3">Konum</h2>
            <div class="aspect-[4/3] lg:aspect-[3/4] rounded-2xl overflow-hidden border border-gray-100 shadow-sm">
              <!-- Google Maps Iframe - Giyimkent 4. Sokak -->
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d752.4418977844789!2d28.88420065!3d41.0438986!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabb7d1f4b3d39%3A0x8b7e1a3e5c9d8a7b!2sGiyimkent%204.%20Sk.%2C%20Oru%C3%A7reis%2C%2034235%20Esenler%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1703026200000!5m2!1str!2str"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Yetiş Çorap - Giyimkent 4. Sokak"
              ></iframe>
            </div>
            <a
              href="https://www.google.com/maps/search/Oruçreis+Mah.+Giyimkent+4+Sokak+Kapı+No:50+Esenler+İstanbul"
              target="_blank"
              rel="noopener noreferrer"
              class="mt-3 inline-flex items-center gap-2 text-xs text-slate-500 hover:text-pink-500 transition-colors"
            >
              <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span>Google Maps'te Aç</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Merhaba, sizinle iletişime geçmek istiyorum."
    variant="fab"
  />
</BaseLayout>
