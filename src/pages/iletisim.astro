---
/**
 * TR İletişim Sayfası
 * Firma bilgileri, harita ve iletişim formu (WhatsApp)
 */

import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD Yapısal Veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WholesaleStore',
  'name': 'Yetiş Çorap',
  'description': 'Toptan bebek ve çocuk çorabı satışı',
  'url': 'https://yetiscorap.com',
  'telephone': '+905369205969',
  'email': 'yetiscorap@hotmail.com',
  'address': {
    '@type': 'PostalAddress',
    'streetAddress': 'Oruçreis Mah. Giyimkent 4. Sokak No:50',
    'addressLocality': 'Esenler',
    'addressRegion': 'İstanbul',
    'postalCode': '34220',
    'addressCountry': 'TR'
  },
  'geo': {
    '@type': 'GeoCoordinates',
    'latitude': '41.0406',
    'longitude': '28.8787'
  },
  'openingHoursSpecification': {
    '@type': 'OpeningHoursSpecification',
    'dayOfWeek': [
      'Monday',
      'Tuesday',
      'Wednesday',
      'Thursday',
      'Friday',
      'Saturday'
    ],
    'opens': '09:00',
    'closes': '18:00'
  }
};
---

<BaseLayout
  title="İletişim"
  description="Yetiş Çorap ile iletişime geçin. Adres: Oruçreis Mah. Giyimkent 4 Sokak No:50, Esenler/İstanbul. Tel: 0536 920 59 69"
  lang="tr"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath="/iletisim" client:load />

  <main>
    <!-- Sayfa Başlığı -->
    <section class="bg-gradient-to-br from-brand-blue/10 to-brand-pink/10 py-12">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="heading-xl mb-4">İletişim</h1>
          <p class="text-lg text-slate-600">
            Toptan çorap siparişleriniz ve sorularınız için bizimle iletişime geçin. Size en kısa sürede dönüş yapacağız.
          </p>
        </div>
      </div>
    </section>

    <!-- İletişim Bilgileri ve Harita -->
    <section class="section">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Sol: İletişim Bilgileri -->
          <div class="space-y-8">
            <!-- Firma Bilgileri -->
            <div>
              <h2 class="heading-md mb-6">Firma Bilgileri</h2>
              <div class="space-y-4">
                <div>
                  <h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wide mb-1">Ünvan</h3>
                  <p class="text-slate-900 font-medium">YETİŞ ÇORAP TEKSTİL ÇAMAŞIR İTH. İHR. LTD. ŞTİ.</p>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-slate-500 uppercase tracking-wide mb-1">Adres</h3>
                  <p class="text-slate-900">
                    Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50<br />
                    Esenler / İstanbul<br />
                    Türkiye
                  </p>
                </div>
              </div>
            </div>

            <!-- İletişim Yöntemleri -->
            <div>
              <h2 class="heading-md mb-6">İletişim Yöntemleri</h2>
              <div class="space-y-4">
                <!-- Telefon -->
                <a
                  href="tel:+905369205969"
                  class="flex items-start gap-4 p-4 bg-slate-50 rounded-lg hover:bg-slate-100 transition-colors group"
                >
                  <div class="flex-shrink-0 w-12 h-12 bg-brand-blue rounded-lg flex items-center justify-center text-white group-hover:bg-brand-pink transition-colors">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 mb-1">Telefon</h3>
                    <p class="text-brand-blue group-hover:text-brand-pink font-medium">0536 920 59 69</p>
                  </div>
                </a>

                <!-- E-Posta -->
                <a
                  href="mailto:yetiscorap@hotmail.com"
                  class="flex items-start gap-4 p-4 bg-slate-50 rounded-lg hover:bg-slate-100 transition-colors group"
                >
                  <div class="flex-shrink-0 w-12 h-12 bg-brand-blue rounded-lg flex items-center justify-center text-white group-hover:bg-brand-pink transition-colors">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-slate-900 mb-1">E-Posta</h3>
                    <p class="text-brand-blue group-hover:text-brand-pink font-medium">yetiscorap@hotmail.com</p>
                  </div>
                </a>

                <!-- WhatsApp -->
                <div class="p-4 bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-lg">
                  <div class="flex items-start gap-4 mb-4">
                    <div class="flex-shrink-0 w-12 h-12 bg-whatsapp-green rounded-lg flex items-center justify-center text-white">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-slate-900 mb-1">WhatsApp</h3>
                      <p class="text-slate-600 text-sm mb-3">
                        En hızlı iletişim yöntemi. 7/24 mesaj gönderebilirsiniz.
                      </p>
                    </div>
                  </div>
                  <WhatsAppButton
                    message="Merhaba, sizinle iletişime geçmek istiyorum. Ürünleriniz ve toptan fiyatlar hakkında bilgi alabilir miyim?"
                    size="md"
                    label="WhatsApp ile Mesaj Gönder"
                  />
                </div>
              </div>
            </div>

            <!-- Çalışma Saatleri -->
            <div class="bg-slate-50 rounded-xl p-6">
              <h2 class="heading-sm mb-4">Çalışma Saatleri</h2>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-slate-600">Pazartesi - Cuma</span>
                  <span class="font-medium text-slate-900">09:00 - 18:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-slate-600">Cumartesi</span>
                  <span class="font-medium text-slate-900">09:00 - 15:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-slate-600">Pazar</span>
                  <span class="font-medium text-slate-900">Kapalı</span>
                </div>
              </div>
              <p class="mt-4 text-xs text-slate-500">
                * WhatsApp üzerinden 7/24 mesaj gönderebilirsiniz. Mesajlarınız en kısa sürede cevaplanacaktır.
              </p>
            </div>
          </div>

          <!-- Sağ: Harita -->
          <div>
            <h2 class="heading-md mb-6">Konum</h2>
            <div class="aspect-[4/3] rounded-xl overflow-hidden shadow-lg">
              <!-- Google Maps Iframe -->
              <!-- Gerçek koordinatlar için Google Maps'ten iframe kodu alınmalı -->
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.8276447917516!2d28.8765!3d41.0406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDAyJzI2LjIiTiAyOMKwNTInMzUuNCJF!5e0!3m2!1str!2str!4v1234567890"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Yetiş Çorap Konumu"
              ></iframe>
            </div>
            <p class="mt-4 text-sm text-slate-600">
              <strong>Not:</strong> Ziyaret öncesi lütfen WhatsApp üzerinden randevu alınız.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gradient-to-br from-brand-pink/10 to-brand-blue/10">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="heading-lg mb-4">Hemen İletişime Geçin</h2>
          <p class="text-slate-600 text-lg mb-8">
            Toptan sipariş vermek, fiyat teklifi almak veya sorularınızı sormak için bize ulaşın.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <WhatsAppButton
              message="Merhaba, toptan çorap siparişi hakkında bilgi almak istiyorum."
              size="lg"
              label="WhatsApp ile Yaz"
            />
            <a
              href="tel:+905369205969"
              class="btn btn-outline px-8 py-4 text-lg"
            >
              Hemen Ara
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Merhaba, sizinle iletişime geçmek istiyorum."
    variant="fab"
  />
</BaseLayout>
