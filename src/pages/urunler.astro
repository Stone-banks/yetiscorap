---
import BaseLayout from '@layouts/BaseLayout.astro';
import Footer from '@components/Footer.astro';
import WhatsAppButton from '@components/WhatsAppButton.astro';
import CatalogSection from '@components/CatalogSection.tsx';
import HeaderNav from '@components/HeaderNav.tsx';

// JSON-LD yapısal veri
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  'name': 'Ürün Kataloğu - Yetiş Çorap',
  'description': 'Toptan bebek ve çocuk çorapları kataloğumuz. Geniş ürün yelpazesi ve uygun fiyatlar.',
  'url': 'https://yetiscorap.com/urunler',
  'mainEntity': {
    '@type': 'ItemList',
    'itemListElement': []
  }
};
---

<BaseLayout
  title="Ürün Kataloğu - Toptan Bebek & Çocuk Çorapları"
  description="Yetiş Çorap ürün kataloğu - Geniş bebek ve çocuk çorapları koleksiyonu. Toptan fiyatlarla kaliteli ürünler."
  lang="tr"
  jsonLd={jsonLd}
>
  <HeaderNav lang="tr" currentPath="/urunler" client:load />

  <main>
    <!-- Breadcrumb -->
    <section class="py-4 bg-white border-b border-slate-100">
      <div class="container mx-auto px-4">
        <nav class="flex items-center gap-2 text-sm text-slate-500">
          <a href="/" class="hover:text-slate-700 transition-colors">Ana Sayfa</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-slate-900 font-medium">Ürünler</span>
        </nav>
      </div>
    </section>

    <!-- Products Section - Full Catalog -->
    <CatalogSection client:load mode="full" lang="tr" />
  </main>

  <Footer lang="tr" />

  <!-- WhatsApp FAB -->
  <WhatsAppButton
    message="Merhaba, ürünleriniz hakkında bilgi almak istiyorum."
    variant="fab"
  />
</BaseLayout>