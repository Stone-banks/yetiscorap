---
/**
 * Footer.astro
 * Site footer bileşeni
 *
 * İçerik:
 * - Firma bilgileri
 * - İletişim bilgileri
 * - Hızlı linkler
 * - Sosyal medya linkleri
 * - Telif hakkı
 */

interface Props {
  lang?: 'tr' | 'en';
}

const { lang = 'tr' } = Astro.props;

// Metinler
const texts = {
  tr: {
    company: 'Yetiş Çorap',
    about: 'İstanbul Giyimkent\'te 20 yılı aşkın deneyimle bebek ve çocuk çorabı toptan satışı yapıyoruz.',
    quickLinks: 'Hızlı Linkler',
    contact: 'İletişim',
    companyName: 'YETİŞ ÇORAP TEKSTİL ÇAMAŞIR İTH. İHR. LTD. ŞTİ.',
    address: 'Oruçreis Mah. Giyimkent 4 Sokak Kapı No:50',
    city: 'Esenler / İstanbul',
    phone: 'Telefon',
    email: 'E-Posta',
    followUs: 'Bizi Takip Edin',
    copyright: 'Tüm hakları saklıdır.',
    menu: {
      home: 'Ana Sayfa',
      products: 'Ürünler',
      contact: 'İletişim'
    }
  },
  en: {
    company: 'Yetiş Çorap',
    about: 'We provide wholesale baby and children\'s socks with over 20 years of experience in Istanbul Giyimkent.',
    quickLinks: 'Quick Links',
    contact: 'Contact',
    companyName: 'YETİŞ ÇORAP TEKSTİL ÇAMAŞIR İTH. İHR. LTD. ŞTİ.',
    address: 'Oruçreis Mah. Giyimkent 4 Sokak No:50',
    city: 'Esenler / Istanbul',
    phone: 'Phone',
    email: 'Email',
    followUs: 'Follow Us',
    copyright: 'All rights reserved.',
    menu: {
      home: 'Home',
      products: 'Products',
      contact: 'Contact'
    }
  }
};

const t = texts[lang];

// Menü linkleri
const menuLinks = [
  { label: t.menu.home, href: lang === 'tr' ? '/' : '/en' },
  { label: t.menu.products, href: lang === 'tr' ? '/urunler' : '/en/products' },
  { label: t.menu.contact, href: lang === 'tr' ? '/iletisim' : '/en/contact' }
];

// Sosyal medya (placeholder - Instagram var, diğerleri eklenebilir)
const socialMedia = [
  {
    name: 'Instagram',
    href: 'https://instagram.com/yetiscorap',
    icon: 'instagram'
  }
];

// Güncel yıl
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300 mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Firma Hakkında -->
      <div class="space-y-4">
        <h3 class="text-white text-lg font-bold mb-4">
          <span class="text-brand-pink">{t.company.split(' ')[0]}</span>
          <span class="text-brand-blue ml-1">{t.company.split(' ')[1]}</span>
        </h3>
        <p class="text-sm leading-relaxed">
          {t.about}
        </p>
      </div>

      <!-- Hızlı Linkler -->
      <div class="space-y-4">
        <h4 class="text-white text-base font-semibold mb-4">{t.quickLinks}</h4>
        <ul class="space-y-2">
          {menuLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm hover:text-brand-pink transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- İletişim Bilgileri -->
      <div class="space-y-4">
        <h4 class="text-white text-base font-semibold mb-4">{t.contact}</h4>
        <address class="not-italic text-sm space-y-3">
          <div>
            <p class="font-medium text-white">{t.companyName}</p>
            <p class="mt-1">{t.address}</p>
            <p>{t.city}</p>
          </div>
          <div>
            <p class="font-medium text-white">{t.phone}:</p>
            <a href="tel:+905369205969" class="hover:text-brand-pink transition-colors">
              0536 920 59 69
            </a>
          </div>
          <div>
            <p class="font-medium text-white">{t.email}:</p>
            <a href="mailto:yetiscorap@hotmail.com" class="hover:text-brand-pink transition-colors">
              yetiscorap@hotmail.com
            </a>
          </div>
        </address>
      </div>

      <!-- Sosyal Medya -->
      <div class="space-y-4">
        <h4 class="text-white text-base font-semibold mb-4">{t.followUs}</h4>
        <div class="flex gap-4">
          {socialMedia.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-slate-800 text-slate-300 hover:bg-brand-pink hover:text-white transition-all duration-200"
              aria-label={social.name}
            >
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
            </a>
          ))}
        </div>

        <!-- WhatsApp İletişim Butonu -->
        <div class="mt-6">
          <a
            href="https://wa.me/905369205969"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-whatsapp-green text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors duration-200"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            <span>WhatsApp</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Alt Çizgi ve Telif Hakkı -->
    <div class="border-t border-slate-800 mt-8 pt-8 text-center text-sm">
      <p>
        &copy; {currentYear} <span class="text-brand-pink font-medium">{t.company}</span>. {t.copyright}
      </p>
    </div>
  </div>
</footer>
