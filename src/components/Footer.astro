---
/**
 * Footer.astro
 * Kurumsal standart footer bileşeni
 *
 * İçerik:
 * - Logo ve kısa açıklama
 * - Hızlı linkler
 * - İletişim bilgileri
 * - Sosyal medya
 * - Telif hakkı
 */

interface Props {
  lang?: 'tr' | 'en';
}

const { lang = 'tr' } = Astro.props;

// Metinler
const texts = {
  tr: {
    company: 'Yetiş Çorap',
    tagline: 'Toptan Bebek ve Çocuk Çorabı',
    about: '2017\'den beri İstanbul Giyimkent\'te kaliteli çorap üretimi ve toptan satışı yapıyoruz.',
    quickLinks: 'Hızlı Linkler',
    contact: 'İletişim',
    followUs: 'Sosyal Medya',
    address: 'Oruçreis Mah. Giyimkent 4 Sokak No:50',
    city: 'Esenler / İstanbul',
    phone: 'Telefon',
    email: 'E-Posta',
    workHours: 'Çalışma Saatleri',
    workHoursValue: 'Pzt - Cum: 09:00 - 18:00',
    copyright: 'Tüm hakları saklıdır.',
    madeWith: 'ile yapıldı',
    menu: {
      home: 'Ana Sayfa',
      products: 'Ürünler',
      about: 'Hakkımızda',
      contact: 'İletişim'
    }
  },
  en: {
    company: 'Yetiş Çorap',
    tagline: 'Wholesale Baby and Children Socks',
    about: 'Since 2017, we have been producing and wholesaling quality socks in Istanbul Giyimkent.',
    quickLinks: 'Quick Links',
    contact: 'Contact',
    followUs: 'Social Media',
    address: 'Oruçreis Mah. Giyimkent 4 Sokak No:50',
    city: 'Esenler / Istanbul',
    phone: 'Phone',
    email: 'Email',
    workHours: 'Working Hours',
    workHoursValue: 'Mon - Fri: 09:00 - 18:00',
    copyright: 'All rights reserved.',
    madeWith: 'made with',
    menu: {
      home: 'Home',
      products: 'Products',
      about: 'About',
      contact: 'Contact'
    }
  }
};

const t = texts[lang];

// Menü linkleri
const menuLinks = [
  { label: t.menu.home, href: lang === 'tr' ? '/' : '/en' },
  { label: t.menu.products, href: lang === 'tr' ? '/urunler' : '/en/products' },
  { label: t.menu.contact, href: lang === 'tr' ? '/iletisim' : '/en/contact' }
];

// Güncel yıl
const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300 relative z-30">
  <!-- Main Footer -->
  <div class="container py-12 md:py-16 pb-32 md:pb-40">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <a href={lang === 'tr' ? '/' : '/en'} class="inline-block mb-4">
          <img 
            src="/yetiscoraplogo.png" 
            alt={t.company}
            class="h-12 w-auto brightness-0 invert opacity-90"
            width="120"
            height="48"
          />
        </a>
        <p class="text-sm text-slate-400 leading-relaxed mb-6">
          {t.about}
        </p>
        
        <!-- Social Icons -->
        <div class="flex items-center gap-3">
          <a
            href="https://instagram.com/yetiscorap"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-pink-500 hover:text-white transition-all"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
