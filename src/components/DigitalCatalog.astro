<script>
  document.addEventListener('DOMContentLoaded', () => {
    const spreads = document.querySelectorAll('.catalog-spread');
    const tabs = document.querySelectorAll('.category-tab');
    const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement | null;
    const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement | null;
    const currentPageNum = document.getElementById('currentPageNum');
    const totalPagesEl = document.getElementById('totalPages');
    const zoomModal = document.getElementById('zoomModal');
    const zoomOverlay = document.getElementById('zoomOverlay');
    const zoomCloseBtn = document.getElementById('zoomCloseBtn');
    const zoomContent = document.getElementById('zoomContent');
    const zoomBtns = document.querySelectorAll('.page-zoom-btn');
    const downloadPdfBtn = document.getElementById('downloadPdfBtn');
    
    let currentPage = 0;
    let filteredSpreads: Element[] = Array.from(spreads);
    
    // Sayfa güncelle
    function updatePage(animate = true) {
      spreads.forEach(spread => spread.classList.remove('active'));
      
      if (filteredSpreads[currentPage]) {
        if (animate) {
          (filteredSpreads[currentPage] as HTMLElement).style.animation = 'fadeIn 0.3s ease-out';
        }
        filteredSpreads[currentPage].classList.add('active');
      }
      
      if (currentPageNum) currentPageNum.textContent = String(currentPage + 1);
      if (totalPagesEl) totalPagesEl.textContent = String(filteredSpreads.length);
      
      if (prevBtn) prevBtn.disabled = currentPage === 0;
      if (nextBtn) nextBtn.disabled = currentPage >= filteredSpreads.length - 1;
    }
    
    // Önceki sayfa
    prevBtn?.addEventListener('click', () => {
      if (currentPage > 0) {
        currentPage--;
        updatePage();
      }
    });
    
    // Sonraki sayfa
    nextBtn?.addEventListener('click', () => {
      if (currentPage < filteredSpreads.length - 1) {
        currentPage++;
        updatePage();
      }
    });
    
    // Klavye navigasyonu
    document.addEventListener('keydown', (e) => {
      if (zoomModal?.classList.contains('active')) {
        if (e.key === 'Escape') closeZoom();
        return;
      }
      
      if (e.key === 'ArrowLeft' && currentPage > 0) {
        currentPage--;
        updatePage();
      } else if (e.key === 'ArrowRight' && currentPage < filteredSpreads.length - 1) {
        currentPage++;
        updatePage();
      }
    });
    
    // Kategori filtreleme
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        const category = tab.getAttribute('data-category');
        
        if (category === 'all') {
          filteredSpreads = Array.from(spreads);
        } else {
          filteredSpreads = Array.from(spreads).filter(
            spread => spread.getAttribute('data-category') === category
          );
        }
        
        currentPage = 0;
        spreads.forEach(s => s.classList.remove('active'));
        
        if (filteredSpreads.length > 0) {
          updatePage();
        }
      });
    });
    
    // Zoom
    zoomBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const pageType = btn.getAttribute('data-page');
        const activeSpread = document.querySelector('.catalog-spread.active');
        
        if (activeSpread && zoomContent) {
          const pageToZoom = pageType === 'left' 
            ? activeSpread.querySelector('.left-page')
            : activeSpread.querySelector('.right-page');
          
          if (pageToZoom) {
            zoomContent.innerHTML = '';
            const clone = pageToZoom.cloneNode(true) as HTMLElement;
            clone.querySelector('.page-zoom-btn')?.remove();
            zoomContent.appendChild(clone);
            zoomModal?.classList.add('active');
            document.body.style.overflow = 'hidden';
          }
        }
      });
    });
    
    // Zoom kapat
    function closeZoom() {
      zoomModal?.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    zoomCloseBtn?.addEventListener('click', closeZoom);
    zoomOverlay?.addEventListener('click', closeZoom);
    
    // PDF İndir
    downloadPdfBtn?.addEventListener('click', () => {
      alert('PDF indirme özelliği yakında aktif olacak. Şimdilik sayfayı yazdır (Ctrl+P) ile PDF olarak kaydedebilirsiniz.');
    });
    
    // İlk yükleme
    updatePage(false);
  });
</script>
