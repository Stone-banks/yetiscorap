) : (
  <!-- FAB (Floating Action Button) Görünümü - Sadece Masaüstünde Görünür -->
  <a
    id="whatsapp-fab"
    href={whatsappURL}
    data-whatsapp-button
    data-url={whatsappURL}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-fab no-print hidden md:flex"
    aria-label="WhatsApp ile iletişime geç"
    title="WhatsApp ile iletişime geç"
  >
    <svg
      class="w-7 h-7"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
