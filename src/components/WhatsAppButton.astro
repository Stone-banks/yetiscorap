<script define:vars={{ phoneNumber, encodedMessage, whatsappURL }}>
  // Çoklu dil desteği
  const translations = {
    tr: {
      wholesale_warning: '⚠️ Sadece Toptan Satış Yapıyoruz',
      wholesale_message: 'Ürünlerimiz sadece toptan satış için geçerlidir. Lütfen sipariş vermeden önce bu bilgilendirmeyi okuduğunuzu emin olun.',
      auto_continue: 'Otomatik devam edilir:',
      seconds: 'saniye',
      close: 'Kapat',
      continue: 'Devam'
    },
    en: {
      wholesale_warning: '⚠️ Wholesale Only',
      wholesale_message: 'Our products are available for wholesale only. Please confirm that you understand this before placing an order.',
      auto_continue: 'Auto continue in:',
      seconds: 'seconds',
      close: 'Close',
      continue: 'Continue'
    }
  };

  // Mevcut dili tespit et
  const getCurrentLang = () => {
    const path = window.location.pathname;
    return path.startsWith('/en') ? 'en' : 'tr';
  };

  // Modal ve sayaç değişkenleri
  let modal = null;
  let countdownTimer = null;
  let countdownValue = 5;
  let currentWhatsAppUrl = '';

  // Modal'ı göster
  const showModal = (url) => {
    currentWhatsAppUrl = url;
    
    // Modal elementini bul veya oluştur
    modal = document.getElementById('whatsapp-modal');
    if (!modal) return;

    // Dile göre çevirileri uygula
    const lang = getCurrentLang();
    const t = translations[lang];

    // Çevirileri uygula
    modal.querySelectorAll('[data-tr]').forEach(el => {
      const key = el.getAttribute('data-tr');
      if (t[key]) {
        el.textContent = t[key];
      }
    });

    // Modal'ı göster
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';

    // Sayacı başlat
    countdownValue = 5;
    const timerElement = document.getElementById('countdown-timer');
    if (timerElement) {
      timerElement.textContent = countdownValue.toString();
    }

    // 5 saniye geri sayım
    countdownTimer = setInterval(() => {
      countdownValue--;
      if (timerElement) {
        timerElement.textContent = countdownValue.toString();
      }

      if (countdownValue <= 0) {
        clearInterval(countdownTimer);
        closeModalAndContinue();
      }
    }, 1000);
  };

  // Modal'ı kapat ve işlemi iptal
  const closeModalOnly = () => {
    if (countdownTimer) {
      clearInterval(countdownTimer);
      countdownTimer = null;
    }

    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }

    currentWhatsAppUrl = '';
  };

  // Modal'ı kapat ve WhatsApp'a yönlendir
  const closeModalAndContinue = () => {
    if (countdownTimer) {
      clearInterval(countdownTimer);
      countdownTimer = null;
    }

    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }

    if (currentWhatsAppUrl) {
      window.open(currentWhatsAppUrl, '_blank');
      currentWhatsAppUrl = '';
    }
  };

  // WhatsApp butonlarına event listener ekle
  const initWhatsAppButtons = () => {
    const buttons = document.querySelectorAll('[data-whatsapp-button]');
    
    buttons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const url = button.getAttribute('data-url');
        if (url) {
          showModal(url);
        }
      });
    });

    // Kapat butonu
    const closeBtn = document.getElementById('whatsapp-close');
    if (closeBtn) {
      closeBtn.addEventListener('click', closeModalOnly);
    }

    // Devam butonu
    const continueBtn = document.getElementById('whatsapp-continue');
    if (continueBtn) {
      continueBtn.addEventListener('click', closeModalAndContinue);
    }

    // Modal dışına tıklama ile kapatma (kapatma, sadece kullanıcı bilinçli kapatmalı)
    // İsteğe göre açılabilir
  };

  // Sayfa yüklendiğinde başlat
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initWhatsAppButtons);
  } else {
    initWhatsAppButtons();
  }
</script>
