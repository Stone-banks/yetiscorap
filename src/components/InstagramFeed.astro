---
/**
 * InstagramFeed.astro
 * Instagram görselleri grid bileşeni
 *
 * Anasayfada "Sosyal Medyada Biz" bölümü için
 * Statik görseller kullanır (public/images/instagram/)
 *
 * Not: Elfsight widget kodu buraya eklenebilir
 * Şimdilik placeholder görseller ile statik grid
 */

interface Props {
  lang?: 'tr' | 'en';
}

const { lang = 'tr' } = Astro.props;

// Metinler
const texts = {
  tr: {
    title: 'Sosyal Medyada Biz',
    description: 'Instagram\'da güncel ürünlerimizi ve haberlerimizi takip edin',
    followButton: 'Instagram\'da Takip Et'
  },
  en: {
    title: 'Follow Us',
    description: 'Follow our latest products and news on Instagram',
    followButton: 'Follow on Instagram'
  }
};

const t = texts[lang];

// Placeholder Instagram görselleri
// Gerçek görseller public/images/instagram/ klasörüne eklenecek
const instagramPosts = [
  {
    id: 1,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 1'
  },
  {
    id: 2,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 2'
  },
  {
    id: 3,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 3'
  },
  {
    id: 4,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 4'
  },
  {
    id: 5,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 5'
  },
  {
    id: 6,
    image: '/images/placeholder.png',
    alt: 'Instagram Post 6'
  }
];

// Instagram profil URL'si
const instagramURL = 'https://instagram.com/yetiscorap';
---

<section class="section bg-slate-50">
  <div class="container">
    <!-- Başlık -->
    <div class="text-center mb-12">
      <h2 class="heading-lg mb-4">{t.title}</h2>
      <p class="text-slate-600 text-lg max-w-2xl mx-auto">
        {t.description}
      </p>
    </div>

    <!-- Instagram Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
      {instagramPosts.map((post) => (
        <a
          href={instagramURL}
          target="_blank"
          rel="noopener noreferrer"
          class="instagram-post group relative aspect-square overflow-hidden rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200"
        >
          <img
            src={post.image}
            alt={post.alt}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
            loading="lazy"
          />

          <!-- Hover Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center p-4">
            <div class="text-white text-center">
              <svg class="w-8 h-8 mx-auto" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Takip Et Butonu -->
    <div class="text-center">
      <a
        href={instagramURL}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-200 shadow-md hover:shadow-lg"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
        </svg>
        <span>{t.followButton}</span>
      </a>
    </div>

    <!-- Elfsight Widget Placeholder -->
    <!-- Gerçek Instagram feed widget'ı eklemek için: -->
    <!-- 1. Elfsight.com'dan widget kodu al -->
    <!-- 2. Aşağıdaki yorum satırlarını kaldır ve kodu yapıştır -->
    <!--
    <div class="elfsight-app-YOUR-WIDGET-ID"></div>
    <script src="https://static.elfsight.com/platform/platform.js" defer></script>
    -->
  </div>
</section>

<style>
  /* Instagram grid hover efekti için ek stiller */
  .instagram-post {
    position: relative;
  }

  .instagram-post::after {
    content: '';
    position: absolute;
    inset: 0;
    border: 2px solid transparent;
    border-radius: inherit;
    transition: border-color 0.3s ease;
  }

  .instagram-post:hover::after {
    border-color: rgba(244, 114, 182, 0.5);
  }
</style>
