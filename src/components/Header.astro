---
/**
 * Header.astro - Mobile-First Header Component
 *
 * DÜZELTMELER:
 * - z-index hiyerarşisi düzeltildi (Header < Overlay < Menu)
 * - Menü açma/kapama tamamen çalışır hale getirildi
 * - Overlay click ile kapanma düzeltildi
 * - Body scroll lock eklendi
 * - WhatsApp FAB gizleme düzeltildi
 */

import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang?: 'tr' | 'en';
  currentPath?: string;
}

const { lang = 'tr', currentPath = '' } = Astro.props;

// Menu items
const menuItemsTR = [
  { label: 'Ana Sayfa', href: '/' },
  { label: 'Ürünler', href: '/urunler' },
  { label: 'İletişim', href: '/iletisim' }
];

const menuItemsEN = [
  { label: 'Home', href: '/en' },
  { label: 'Products', href: '/en/products' },
  { label: 'Contact', href: '/en/contact' }
];

const menuItems = lang === 'tr' ? menuItemsTR : menuItemsEN;

// Active page check
const isActive = (href: string) => {
  const path = currentPath || Astro.url.pathname;
  if (href === '/' || href === '/en') {
    return path === href;
  }
  return path.startsWith(href);
};

// WhatsApp message
const whatsappMsg = lang === 'tr'
  ? encodeURIComponent('Merhaba, ürünleriniz hakkında bilgi almak istiyorum.')
  : encodeURIComponent('Hello, I would like to get information about your products.');
---

<!-- Header - z-index: 40 -->
<header class="header-main bg-white shadow-sm sticky top-0 z-40">
  <nav class="container mx-auto px-4 h-20 md:h-24 flex items-center justify-between py-2">
    <!-- Logo - Büyük ve dikkat çekici -->
    <a href={lang === 'tr' ? '/' : '/en'} class="flex-shrink-0">
      <img
        src="/yetiscoraplogo.png"
        alt="Yetiş Çorap"
        class="h-16 sm:h-20 md:h-24 w-auto object-contain"
        width="200"
        height="80"
      />
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      <ul class="flex items-center gap-4">
        {menuItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`text-sm font-medium px-3 py-2 rounded-lg transition-colors ${
                isActive(item.href)
                  ? 'text-pink-500 bg-pink-50'
                  : 'text-slate-600 hover:text-pink-500 hover:bg-slate-50'
              }`}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
    </div>

    <!-- Mobile Hamburger Button -->
    <button
      type="button"
      id="menu-toggle"
      class="md:hidden flex items-center justify-center w-11 h-11 rounded-lg text-slate-600 hover:bg-slate-100 active:bg-slate-200 transition-colors"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label={lang === 'tr' ? 'Menüyü aç' : 'Open menu'}
    >
      <svg id="icon-hamburger" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="icon-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
</header>

<!-- Mobile Menu Overlay - z-index: 50 (Header'ın üstünde) -->
<div
  id="menu-overlay"
  class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 opacity-0 invisible transition-all duration-300 md:hidden"
  aria-hidden="true"
></div>

<!-- Mobile Menu Panel - z-index: 60 (Overlay'in üstünde) -->
<aside
  id="mobile-menu"
  class="fixed top-0 right-0 bottom-0 w-[300px] max-w-[85vw] bg-white z-[60] transform translate-x-full transition-transform duration-300 ease-out md:hidden shadow-2xl"
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
  aria-label={lang === 'tr' ? 'Ana menü' : 'Main menu'}
>
  <div class="flex flex-col h-full">
    <!-- Menu Header -->
    <div class="flex items-center justify-between p-4 border-b border-slate-100">
      <img
        src="/yetiscoraplogo.png"
        alt="Yetiş Çorap"
        class="h-14 w-auto object-contain"
        width="120"
        height="48"
      />
      <button
        type="button"
        id="menu-close"
        class="flex items-center justify-center w-11 h-11 rounded-lg text-slate-500 hover:bg-slate-100 active:bg-slate-200 transition-colors"
        aria-label={lang === 'tr' ? 'Menüyü kapat' : 'Close menu'}
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Menu Content -->
    <div class="flex-1 overflow-y-auto py-6">
      <!-- Navigation Links -->
      <nav class="px-4">
        <ul class="space-y-2">
          {menuItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`menu-link block px-4 py-3.5 rounded-xl text-base font-medium transition-colors ${
                  isActive(item.href)
                    ? 'text-pink-500 bg-pink-50'
                    : 'text-slate-700 hover:bg-slate-50 active:bg-slate-100'
                }`}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- WhatsApp Button -->
      <div class="px-4 mt-8">
        <a
          href={`https://wa.me/905369205969?text=${whatsappMsg}`}
          target="_blank"
          rel="noopener noreferrer"
          class="menu-link flex items-center justify-center gap-3 w-full h-14 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white font-semibold rounded-xl transition-colors shadow-md"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>{lang === 'tr' ? 'WhatsApp ile İletişim' : 'Contact via WhatsApp'}</span>
        </a>
      </div>

      <!-- Phone Button -->
      <div class="px-4 mt-3">
        <a
          href="tel:+905369205969"
          class="menu-link flex items-center justify-center gap-3 w-full h-14 bg-blue-500 hover:bg-blue-600 active:bg-blue-700 text-white font-semibold rounded-xl transition-colors shadow-md"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{lang === 'tr' ? 'Hemen Ara' : 'Call Now'}</span>
        </a>
      </div>
    </div>

    <!-- Menu Footer - Language Switcher -->
    <div class="p-4 border-t border-slate-100 bg-slate-50">
      <p class="text-xs text-slate-400 uppercase tracking-wider mb-3 font-medium">
        {lang === 'tr' ? 'Dil Seçimi' : 'Language'}
      </p>
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
    </div>
  </div>
</aside>

<script>
  // Mobile Menu Controller - Vanilla JS (Astro uyumlu)
  function initMobileMenu() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('menu-overlay');
    const closeBtn = document.getElementById('menu-close');
    const iconHamburger = document.getElementById('icon-hamburger');
    const iconClose = document.getElementById('icon-close');
    const menuLinks = document.querySelectorAll('#mobile-menu .menu-link');
    const fab = document.getElementById('whatsapp-fab');

    let isOpen = false;

    function openMenu() {
      if (isOpen) return;
      isOpen = true;

      // Overlay göster
      if (overlay) {
        overlay.classList.remove('opacity-0', 'invisible');
        overlay.classList.add('opacity-100', 'visible');
        overlay.setAttribute('aria-hidden', 'false');
      }

      // Menü göster
      if (menu) {
        menu.classList.remove('translate-x-full');
        menu.classList.add('translate-x-0');
        menu.setAttribute('aria-hidden', 'false');
      }

      // Toggle buton güncelle
      if (toggle) {
        toggle.setAttribute('aria-expanded', 'true');
      }
      if (iconHamburger) iconHamburger.classList.add('hidden');
      if (iconClose) iconClose.classList.remove('hidden');

      // Body scroll kilitle
      document.body.style.overflow = 'hidden';
      document.body.style.touchAction = 'none';

      // WhatsApp FAB gizle
      if (fab) fab.style.display = 'none';
    }

    function closeMenu() {
      if (!isOpen) return;
      isOpen = false;

      // Overlay gizle
      if (overlay) {
        overlay.classList.add('opacity-0', 'invisible');
        overlay.classList.remove('opacity-100', 'visible');
        overlay.setAttribute('aria-hidden', 'true');
      }

      // Menü gizle
      if (menu) {
        menu.classList.add('translate-x-full');
        menu.classList.remove('translate-x-0');
        menu.setAttribute('aria-hidden', 'true');
      }

      // Toggle buton güncelle
      if (toggle) {
        toggle.setAttribute('aria-expanded', 'false');
      }
      if (iconHamburger) iconHamburger.classList.remove('hidden');
      if (iconClose) iconClose.classList.add('hidden');

      // Body scroll aç
      document.body.style.overflow = '';
      document.body.style.touchAction = '';

      // WhatsApp FAB göster
      if (fab) fab.style.display = '';
    }

    // Event Listeners
    if (toggle) {
      toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      });
    }

    if (closeBtn) {
      closeBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        closeMenu();
      });
    }

    if (overlay) {
      overlay.addEventListener('click', closeMenu);
    }

    // Menü linkleri tıklandığında kapat
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        // Küçük gecikme ile kapat (navigasyon için)
        setTimeout(closeMenu, 100);
      });
    });

    // ESC tuşu ile kapat
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });

    // Cleanup function - sayfa değişimlerinde önceki listener'ları temizle
    return () => {
      if (toggle) toggle.removeEventListener('click', openMenu);
      if (closeBtn) closeBtn.removeEventListener('click', closeMenu);
      if (overlay) overlay.removeEventListener('click', closeMenu);
    };
  }

  // DOM hazır olduğunda başlat
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }

  // Astro view transitions için yeniden başlat
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
