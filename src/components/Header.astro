---
/**
 * Header.astro - Kurumsal Modern Header
 *
 * ÖZELLİKLER:
 * - Sticky top-0 pozisyon
 * - Glass effect (backdrop-blur)
 * - Profesyonel border/shadow
 * - Temiz mobil menü etkileşimi
 * - z-index hiyerarşisi düzgün
 */

import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang?: 'tr' | 'en';
  currentPath?: string;
}

const { lang = 'tr', currentPath = '' } = Astro.props;

// Menu items
const menuItemsTR = [
  { label: 'Ana Sayfa', href: '/' },
  { label: 'Ürünler', href: '/urunler' },
  { label: 'İletişim', href: '/iletisim' }
];

const menuItemsEN = [
  { label: 'Home', href: '/en' },
  { label: 'Products', href: '/en/products' },
  { label: 'Contact', href: '/en/contact' }
];

const menuItems = lang === 'tr' ? menuItemsTR : menuItemsEN;

// Active page check
const isActive = (href: string) => {
  const path = currentPath || Astro.url.pathname;
  if (href === '/' || href === '/en') {
    return path === href;
  }
  return path.startsWith(href);
};

// WhatsApp message
const whatsappMsg = lang === 'tr'
  ? encodeURIComponent('Merhaba, ürünleriniz hakkında bilgi almak istiyorum.')
  : encodeURIComponent('Hello, I would like to get information about your products.');
---

<!-- Header - Sticky + Glass Effect -->
<header class="header-main sticky top-0 z-40 transition-all duration-300" id="mainHeader">
  <nav class="container mx-auto px-4 h-16 md:h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href={lang === 'tr' ? '/' : '/en'} class="flex-shrink-0 relative z-10">
      <img
        src="/yetiscoraplogo.png"
        alt="Yetiş Çorap"
        class="h-10 sm:h-12 md:h-14 w-auto object-contain transition-transform duration-200 hover:scale-105"
        width="140"
        height="56"
      />
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-2">
      <ul class="flex items-center gap-1">
        {menuItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`relative text-sm font-medium px-4 py-2.5 rounded-full transition-all duration-200 ${
                isActive(item.href)
                  ? 'text-pink-600 bg-pink-50'
                  : 'text-slate-600 hover:text-pink-600 hover:bg-slate-50'
              }`}
              aria-current={isActive(item.href) ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      
      <!-- Divider -->
      <div class="w-px h-6 bg-slate-200 mx-2"></div>
      
      <!-- Language Switcher -->
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
      
      <!-- WhatsApp CTA -->
      <a
        href={`https://wa.me/905369205969?text=${whatsappMsg}`}
        target="_blank"
        rel="noopener noreferrer"
        class="ml-2 inline-flex items-center gap-2 px-4 py-2.5 bg-green-500 text-white text-sm font-semibold rounded-full hover:bg-green-600 transition-all duration-200 shadow-sm hover:shadow-md"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span class="hidden lg:inline">{lang === 'tr' ? 'İletişim' : 'Contact'}</span>
      </a>
    </div>

    <!-- Mobile Hamburger Button -->
    <button
      type="button"
      id="menu-toggle"
      class="md:hidden flex items-center justify-center w-11 h-11 rounded-full text-slate-600 hover:bg-slate-100 active:bg-slate-200 transition-colors"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label={lang === 'tr' ? 'Menüyü aç' : 'Open menu'}
    >
      <svg id="icon-hamburger" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="icon-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
</header>

<!-- Mobile Menu Overlay -->
<div
  id="menu-overlay"
  class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 opacity-0 invisible transition-all duration-300 md:hidden"
  aria-hidden="true"
></div>

<!-- Mobile Menu Panel -->
<aside
  id="mobile-menu"
  class="fixed top-0 right-0 bottom-0 w-[300px] max-w-[85vw] bg-white z-[60] transform translate-x-full transition-transform duration-300 ease-out md:hidden shadow-2xl"
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
  aria-label={lang === 'tr' ? 'Ana menü' : 'Main menu'}
>
  <div class="flex flex-col h-full">
    <!-- Menu Header -->
    <div class="flex items-center justify-between p-4 border-b border-slate-100">
      <img
        src="/yetiscoraplogo.png"
        alt="Yetiş Çorap"
        class="h-10 w-auto object-contain"
        width="100"
        height="40"
      />
      <button
        type="button"
        id="menu-close"
        class="flex items-center justify-center w-10 h-10 rounded-full text-slate-400 hover:bg-slate-100 active:bg-slate-200 transition-colors"
        aria-label={lang === 'tr' ? 'Menüyü kapat' : 'Close menu'}
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Menu Content -->
    <div class="flex-1 overflow-y-auto py-4">
      <!-- Navigation Links -->
      <nav class="px-3">
        <ul class="space-y-1">
          {menuItems.map((item) => (
            <li>
              <a
                href={item.href}
                class={`menu-link flex items-center gap-3 px-4 py-3.5 rounded-xl text-base font-medium transition-all duration-200 ${
                  isActive(item.href)
                    ? 'text-pink-600 bg-pink-50'
                    : 'text-slate-700 hover:bg-slate-50 active:bg-slate-100'
                }`}
              >
                {isActive(item.href) && (
                  <span class="w-1.5 h-1.5 rounded-full bg-pink-500"></span>
                )}
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Action Buttons -->
      <div class="px-4 mt-6 space-y-3">
        <!-- WhatsApp Button -->
        <a
          href={`https://wa.me/905369205969?text=${whatsappMsg}`}
          target="_blank"
          rel="noopener noreferrer"
          class="menu-link flex items-center justify-center gap-3 w-full h-12 bg-green-500 hover:bg-green-600 active:bg-green-700 text-white font-semibold rounded-xl transition-colors shadow-md"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>{lang === 'tr' ? 'WhatsApp ile İletişim' : 'Contact via WhatsApp'}</span>
        </a>

        <!-- Phone Button -->
        <a
          href="tel:+905369205969"
          class="menu-link flex items-center justify-center gap-3 w-full h-12 bg-slate-100 hover:bg-slate-200 active:bg-slate-300 text-slate-700 font-semibold rounded-xl transition-colors"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>{lang === 'tr' ? 'Hemen Ara' : 'Call Now'}</span>
        </a>
      </div>
    </div>

    <!-- Menu Footer - Language -->
    <div class="p-4 border-t border-slate-100 bg-slate-50">
      <p class="text-xs text-slate-400 uppercase tracking-wider mb-3 font-medium">
        {lang === 'tr' ? 'Dil Seçimi' : 'Language'}
      </p>
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
    </div>
  </div>
</aside>

<style>
  /* Header Default State */
  .header-main {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.8);
  }
  
  /* Header Scrolled State */
  .header-main.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 4px 20px -5px rgba(0, 0, 0, 0.1);
  }
</style>

<script is:inline>
  // Header scroll effect
  function initHeaderScroll() {
    var header = document.getElementById('mainHeader');
    if (!header) return;
    
    function updateHeader() {
      var currentScrollY = window.scrollY;
      
      if (currentScrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    }
    
    window.addEventListener('scroll', updateHeader, { passive: true });
    updateHeader();
  }
  
  // Mobile Menu Controller
  function initMobileMenu() {
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const overlay = document.getElementById('menu-overlay');
    const closeBtn = document.getElementById('menu-close');
    const iconHamburger = document.getElementById('icon-hamburger');
    const iconClose = document.getElementById('icon-close');
    const menuLinks = document.querySelectorAll('#mobile-menu .menu-link');
    const fab = document.getElementById('whatsapp-fab');

    let isOpen = false;

    function openMenu() {
      if (isOpen) return;
      isOpen = true;

      if (overlay) {
        overlay.classList.remove('opacity-0', 'invisible');
        overlay.classList.add('opacity-100', 'visible');
        overlay.setAttribute('aria-hidden', 'false');
      }

      if (menu) {
        menu.classList.remove('translate-x-full');
        menu.classList.add('translate-x-0');
        menu.setAttribute('aria-hidden', 'false');
      }

      if (toggle) {
        toggle.setAttribute('aria-expanded', 'true');
      }
      if (iconHamburger) iconHamburger.classList.add('hidden');
      if (iconClose) iconClose.classList.remove('hidden');

      document.body.style.overflow = 'hidden';
      document.body.style.touchAction = 'none';

      if (fab) fab.style.display = 'none';
    }

    function closeMenu() {
      if (!isOpen) return;
      isOpen = false;

      if (overlay) {
        overlay.classList.add('opacity-0', 'invisible');
        overlay.classList.remove('opacity-100', 'visible');
        overlay.setAttribute('aria-hidden', 'true');
      }

      if (menu) {
        menu.classList.add('translate-x-full');
        menu.classList.remove('translate-x-0');
        menu.setAttribute('aria-hidden', 'true');
      }

      if (toggle) {
        toggle.setAttribute('aria-expanded', 'false');
      }
      if (iconHamburger) iconHamburger.classList.remove('hidden');
      if (iconClose) iconClose.classList.add('hidden');

      document.body.style.overflow = '';
      document.body.style.touchAction = '';

      if (fab) fab.style.display = '';
    }

    // Event Listeners
    if (toggle) {
      toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      });
    }

    if (closeBtn) {
      closeBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        closeMenu();
      });
    }

    if (overlay) {
      overlay.addEventListener('click', closeMenu);
    }

    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        setTimeout(closeMenu, 100);
      });
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initHeaderScroll();
      initMobileMenu();
    });
  } else {
    initHeaderScroll();
    initMobileMenu();
  }

  // Astro view transitions
  document.addEventListener('astro:page-load', () => {
    initHeaderScroll();
    initMobileMenu();
  });
</script>
